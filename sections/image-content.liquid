<!-- image-content.liquid -->
<style>
  .customstyle{{ section.id }}::before{
    position: absolute;
    top:0;
    content: "";
    {%- if section.settings.bg_pos == 'left' -%}
      left:0;
    {%- else -%}
      right:0;
    {%- endif -%}
    width:33%;
    height: {{ section.settings.rangebg }}%;
    background-color: {{ section.settings.bgbefore }};
  }
  @media(max-width:749px){
    .customstyle{{ section.id }}::before{
      {%- if section.settings.bg_pos == 'left' -%}
        left:0;
        top:0;
        right:0;
        height:33%;
        width:100%;
        bottom:auto;
      {%- else -%}
        right:0;
        left:0;
        top:auto;
        bottom:0;
        height:33%;
        width:100%;
      {%- endif -%}
    }
  }
  .text_image_relative{
  position:relative;
  }
  .text_image_absolute{
     position: absolute;
      inset: 0;               /* shorthand for top:0; right:0; bottom:0; left:0; */
      pointer-events: none;   /* so clicks go through the overlay */
      z-index: 0;
      display:flex;
      justify-content: center;
  }
  .mt-2{
  margin-top:20px !important;
  background:red;
  }
.text_image_img{
      height:100%;
      width:100%;
}
</style>
<div class="customstyle{{ section.id }} position-relative" data-aos="{{ section.settings.animation }}">
  {%- render 'style-section' -%}
<div class="text_image_relative {{ section.settings.setwidth }}">
      {% comment %} div for back ground  {% endcomment %}
       <div class="text_image_absolute">
           <img
              class="text_image_img lazyload scale-in"
              src="{{ 'about_us.png' | asset_url }}" 
              alt="Logo"
              loading="lazy"
              height="auto"
              width="auto"
            />
       </div>
  <div class="section-block">
    <div class="subtop text-left text-top mt-2 mb-2 aos-init aos-animate">
    About Us
    </div>
    <h3 class="section-title-1 text-left  aos-init aos-animate">Who We Are</h3>
    <div class="row {% unless section.settings.enable_padding %}no-gutters {% endunless %}">
      {%- liquid
        case section.blocks.size 
        when 1 
          assign flex_size = '' 
        when 2 
          assign flex_size = 'col-md-6' 
        when 3 
          assign flex_size = 'col-md-4' 
        else 
          assign flex_size = 'col-md-6' 
      endcase 
      -%}
      {%- for block in section.blocks -%}
        <div class="{% unless forloop.last %} mb-5 mb-lg-0 {% endunless %} flex__item flex {% if section.settings.align_center %}flex--center-vertical{% endif %} {{ flex_size }}" {{ block.shopify_attributes }}>
          {%- case block.type -%}
            {%- when 'image_block' -%}
              <div class="flex__item">
                {%- if block.settings.image != blank -%}
                  <noscript>
                    <img src="{{ block.settings.image | image_url: width: 600 }}" alt="{{ block.settings.image.alt }}" class="image-content__image"
                      loading="lazy"
                      width="{{ block.settings.image.width }}"
                      height="{{ block.settings.image.height }}">
                  </noscript>
                  <div class="image-content__image-container overflow-hidden">
                    <div class="image-content__image-wrapper" style="padding-top:{{ 1 | divided_by: block.settings.image.aspect_ratio | times: 100 }}%;">
                      {% assign img_url = block.settings.image | image_url: width: 1 | replace: 'width=1', 'width={width}' %}
                      <img class="image-content__image scale-in lazyload"
                        src="{{ block.settings.image | image_url: width: 1, height: 1 }}"
                        data-src="{{ img_url }}"
                        data-widths="[180, 360, 540, 720, 900, 1080, 1296, 1512, 1728, 1944, 2048]"
                        data-aspectratio="{{ block.settings.image.aspect_ratio }}"
                        data-sizes="auto"
                        alt="{{ block.settings.image.alt | escape }}"
                        loading="lazy"
                        width="{{ block.settings.image.width }}"
                        height="{{ block.settings.image.height }}">
                    </div>
                  </div>
                {%- else -%}
                  <div class="image-content__image">
                    {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                  </div>
                {%- endif -%}
              </div>
            {%- when 'text_block' -%}
              {%- assign text_color = block.settings.title_color -%}
              <div class=" h-100 flex  w-100 {% if section.settings.align_center %}flex--center-vertical{% endif %} {% if block.settings.enable_padding %} p-3 p-lg-5 {% endif %}" style="background-color:{{ block.settings.bgtext }} ;">
                <div class="flex__item image-content__text text-{{ block.settings.align }}"  {% if text_color != 'rgba(0,0,0,0)' %}
                  style="--g-font-color-subtop: {{ text_color }};--g-color-heading :  {{ text_color }};--color-body-text : {{ text_color }};--color-body-text-rgb: {{ text_color.red }}, {{ text_color.green }},  {{ text_color.blue }} ;"
                {% endif %} >
                <div class="row justify-content-center">
                  {%- liquid
                    case block.settings.width 
                    when '50%' 
                      assign block_width = 'col-lg-6 col-12' 
                    when '58%' 
                      assign block_width = 'col-lg-7 col-12 ' 
                    when '66%' 
                      assign block_width = 'col-lg-8 col-12 ' 
                    when '75%' 
                      assign block_width = 'col-lg-9 col-12 ' 
                    when '100%' 
                      assign block_width = 'col-12' 
                  endcase 
                  -%}
                  <div class="{{ block_width }}">
                    {%- if block.settings.subtitle != blank -%}
                      <div class="subtop mb-3">{{ block.settings.subtitle }}</div>
                    {%- endif -%}
                    {%- if block.settings.title != blank -%}
                    <h3 class="mb-3 {{ block.settings.size_text }} ">{{ block.settings.title }}</h3>
                    {%- endif -%}
                    {%- if block.settings.text -%}
                      <div class="rte-setting">{{ block.settings.text }}</div>
                    {%- endif -%}
                    {%- if block.settings.answer_content != blank -%}
                    {{ block.settings.answer_content }}
                    {%- endif -%}
                    {%- if block.settings.button != blank -%}
                      <div class="mt-5">
                        <a href="{{ block.settings.link }}" class="btn {{ block.settings.style_btn }} ">
                          {{ block.settings.button }}
                        </a>
                      </div>
                      {%- endif -%}
                    </div>
                  </div>
                </div>
              </div>
          {%- endcase -%}
        </div>
      {%- endfor -%}
    </div>
    {%- if section.blocks.size == 0 -%}
      {%- render 'no-blocks' -%}
    {%- endif -%}
  </div>
</div>
</div>



