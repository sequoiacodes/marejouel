osition:absolute;bottom:0;background:rgba(255,255,255,.1);width:100%;padding:7px 10px;left:0}.smember--style3:hover{-webkit-transform:translateY(-10px);transform:translateY(-10px)}.smember--style3 .smember-icon i:hover{background:#fff;color:#444}.smember--style4{position:relative;border:1px solid var(--g-input-border);background:var(--color-body);padding:16px}.smember--style4 .smember-photo{overflow:hidden;position:relative}.smember--style4 .smember-photo img{-transition:all 0.3s cubic-bezier(0,0,0,0.1);transition:.3s cubic-bezier(0, 0, 0, .1);-webkit-transform:scale(1);transform:scale(1)}.smember--style4 .smember-icons{position:absolute;top:-1px;right:0;width:30px}.smember--style4 .smember-icons a:first-child{-webkit-transition-delay:0.1s;transition-delay:0.1s}.smember--style4 .smember-icons a:nth-child(2){-webkit-transition-delay:0.15s;transition-delay:0.15s}.smember--style4 .smember-icons a:nth-child(3){-webkit-transition-delay:0.2s;transition-delay:0.2s}.smember--style4 .smember-icons a:nth-child(4){-webkit-transition-delay:0.25s;transition-delay:0.25s}.smember--style4 .smember-info{background:var(--color-body);padding-bottom:0!important}.smember--style4 .smember-name{font-size:20px;margin:0;line-height:normal}.smember--style4 span.smember-role{font-size:12px;display:block}.smember--style4:hover .smember-photo img{-webkit-transform:scale(1.1);transform:scale(1.1)}.smember--style4 .smember-icon{-webkit-transform:translateX(50px);transform:translateX(50px);-webkit-transition:-webkit-transform .3s cubic-bezier(0, 0, 0, .2),transform .3s cubic-bezier(0, 0, 0, .2);transition:-webkit-transform .3s cubic-bezier(0, 0, 0, .2),transform .3s cubic-bezier(0, 0, 0, .2);width:30px;margin-bottom:2px;display:inline-block}.smember--style4:hover .smember-icon{-webkit-transform:translateX(0);transform:translateX(0)}

