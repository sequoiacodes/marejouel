
 <div class="customstyle{{ section.id }}">
   {%- render 'style-section' -%}
<div class="steam-member__wrap {{ section.settings.setwidth }}">
  <div class="steam-member__content">
   {%- render 'section-heading' -%}
    <div class="smembers row">
      {%- liquid
        assign items = section.settings.items
        assign column = 'col-lg-4 col-12'

        case items
        when '2'
        assign column = 'col-lg-6 col-12'
        when '3'
        assign column = 'col-lg-4 col-12'
        when '4'
        assign column = 'col-lg-3 col-12'
        endcase
      -%}
      {% for block in section.blocks %}
      <div class="smember-wr {{ column }} mb-4 " data-aos="{{ section.settings.animation }}">
        <div class="smember--style{{ section.settings.layout }}">
          <div class="smember-photo ">
            {% if block.settings.image != blank %}
              <div class="image-content__image-wrapper" style="padding-top:{{ 1 | divided_by: block.settings.image.aspect_ratio | times: 100 }}%;">
                {% assign img_url = block.settings.image | image_url: width: 1 | replace: 'width=1', 'width={width}' %}
                <img src="{{ block.settings.image | image_url: width: 1, height: 1 }}" alt="{{ block.settings.name | handle }}" 
                  class="lazyload" 
                  data-src="{{ img_url }}"
                  data-widths="[180, 360, 540, 720, 900, 1080]"
                  data-aspectratio="{{ block.settings.image.aspect_ratio }}"
                  data-sizes="auto"
                  loading="lazy"
                  width="{{ block.settings.image.width }}"
                  height="{{ block.settings.image.height }}"/>
              </div>
            {% else %}
            {% capture current %}{% cycle 1, 2, 3, 4, 5, 6 %}{% endcapture %}
            {{ 'product-' | append: current | placeholder_svg_tag: 'placeholder-svg' }}
            {% endif %}
            <div class="smember-icons py-3">
              {% if block.settings.twitter != blank %}
              <a target="_blank" href="{{ block.settings.twitter }}" title="{{ block.settings.name }} in twitter" class="smember-icon">
                <svg aria-hidden="true" data-prefix="fab" data-icon="twitter" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512"><path fill="currentColor" d="M459.37 151.716c.325 4.548.325 9.097.325 13.645 0 138.72-105.583 298.558-298.558 298.558-59.452 0-114.68-17.219-161.137-47.106 8.447.974 16.568 1.299 25.34 1.299 49.055 0 94.213-16.568 130.274-44.832-46.132-.975-84.792-31.188-98.112-72.772 6.498.974 12.995 1.624 19.818 1.624 9.421 0 18.843-1.3 27.614-3.573-48.081-9.747-84.143-51.98-84.143-102.985v-1.299c13.969 7.797 30.214 12.67 47.431 13.319-28.264-18.843-46.781-51.005-46.781-87.391 0-19.492 5.197-37.36 14.294-52.954 51.655 63.675 129.3 105.258 216.365 109.807-1.624-7.797-2.599-15.918-2.599-24.04 0-57.828 46.782-104.934 104.934-104.934 30.213 0 57.502 12.67 76.67 33.137 23.715-4.548 46.456-13.32 66.599-25.34-7.798 24.366-24.366 44.833-46.132 57.827 21.117-2.273 41.584-8.122 60.426-16.243-14.292 20.791-32.161 39.308-52.628 54.253z" class=""></path></svg>
              </a>
              {% endif %}
              {% if block.settings.google != blank %}
              <a target="_blank" href="{{ block.settings.google }}" title="{{ block.settings.name }} in google plus" class="smember-icon">
                <svg aria-hidden="true" data-prefix="fab" data-icon="google-plus-g" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 640 512"><path fill="currentColor" d="M386.061 228.496c1.834 9.692 3.143 19.384 3.143 31.956C389.204 370.205 315.599 448 204.8 448c-106.084 0-192-85.915-192-192s85.916-192 192-192c51.864 0 95.083 18.859 128.611 50.292l-52.126 50.03c-14.145-13.621-39.028-29.599-76.485-29.599-65.484 0-118.92 54.221-118.92 121.277 0 67.056 53.436 121.277 118.92 121.277 75.961 0 104.513-54.745 108.965-82.773H204.8v-66.009h181.261zm185.406 6.437V179.2h-56.001v55.733h-55.733v56.001h55.733v55.733h56.001v-55.733H627.2v-56.001h-55.733z" class=""></path></svg>
              </a>
              {% endif %}
              {% if block.settings.facebook != blank %}
              <a target="_blank" href="{{ block.settings.facebook }}" title="{{ block.settings.name }} in facebook" class="smember-icon">
                <svg aria-hidden="true" data-prefix="fab" data-icon="facebook-f" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 264 512"><path fill="currentColor" d="M76.7 512V283H0v-91h76.7v-71.7C76.7 42.4 124.3 0 193.8 0c33.3 0 61.9 2.5 70.2 3.6V85h-48.2c-37.8 0-45.1 18-45.1 44.3V192H256l-11.7 91h-73.6v229" class=""></path></svg>
              </a>
              {% endif %}
              {% if block.settings.linkedin != blank %}
              <a target="_blank" href="{{ block.settings.linkedin }}" title="{{ block.settings.name }} in linkedin" class="smember-icon">
                <svg aria-hidden="true" data-prefix="fab" data-icon="linkedin-in" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512"><path fill="currentColor" d="M100.3 448H7.4V148.9h92.9V448zM53.8 108.1C24.1 108.1 0 83.5 0 53.8S24.1 0 53.8 0s53.8 24.1 53.8 53.8-24.1 54.3-53.8 54.3zM448 448h-92.7V302.4c0-34.7-.7-79.2-48.3-79.2-48.3 0-55.7 37.7-55.7 76.7V448h-92.8V148.9h89.1v40.8h1.3c12.4-23.5 42.7-48.3 87.9-48.3 94 0 111.3 61.9 111.3 142.3V448h-.1z" class=""></path></svg>
              </a>
              {% endif %}
            </div>
          </div>
          {% if block.settings.name != blank %}
          <div class="smember-info py-4">
            <h3 class="h4 mb-1">{{ block.settings.name }}</h3>
            <span class="smember-role txt-body-60 small">{{ block.settings.position }}</span>
          </div>
          {% endif %}
        </div>
      </div>
      {% endfor %}
    </div>
  </div>
</div>
</div>

