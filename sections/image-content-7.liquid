<div class="customstyle{{ section.id }} promo-s1" data-aos="{{ section.settings.animation }}">
    {%- render 'style-section' -%}
  <div class="container">
    <div class="section-block">
        {%- render 'section-heading' -%}
      <div class="promo-s1-box">
        {%- for block in section.blocks -%}
          <div class=" promo-s1-box__col position-relative item-{{ forloop.index }}" {{ block.shopify_attributes }} 
            data-aos="{{ section.settings.animation }}" 
            data-aos-delay="{{ forloop.index | times: 100 }}" >
            <div>
                {%- if block.settings.image != blank -%}
                  <div class="image-content__image-container">
                    <a href="{{ block.settings.button_link }}" class="image-content__image-wrapper" 
                        style="padding-top:{{ 1 | divided_by: block.settings.image.aspect_ratio | times: 100 }}%;">
                      {% assign img_url = block.settings.image | image_url: width: 1 | replace: 'width=1', 'width={width}' %}
                      {%- if block.settings.linkimage != blank -%}<a href="{{block.settings.linkimage}}"> {%- endif -%}
                      <img class="image-content__image lazyload scale-in"
                        src="{{ block.settings.image | image_url: width: 300, height: 300 }}"
                        data-src="{{ img_url }}"
                        data-widths="[180, 360, 540, 720, 900, 1080, 1296, 1512, 1728, 1944, 2048]"
                        data-aspectratio="{{ block.settings.image.aspect_ratio }}"
                        data-sizes="auto"
                        alt="{{ block.settings.image.alt | escape }}"
                        loading="lazy"
                        width="{{ block.settings.image.width }}"
                        height="{{ block.settings.image.height }}">
                        {%- if block.settings.linkimage != blank -%}</a>{%- endif -%}
                      </a >
                  </div>
                {%- else -%}
                  <div class="image-content__image">
                    {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                  </div>
                {%- endif -%}
            </div>    
            <div class="position-absolute promo-s1__text py-lg-5 py-4">
                {%- if block.settings.title_top != blank -%}
                    <div class="subtop text-top mb-2">{{ block.settings.title_top }}</div>
                {%- endif -%}
                {%- if block.settings.title != blank -%}
                    <h4 class="{{ block.settings.size_text }} mb-3" >
                        <span>{{ block.settings.title }}</span>
                    </h4>
                {%- endif -%}
                {%- if block.settings.des != blank -%}
                    <div class="font-family-2 mb-3 txt-body-70 ">{{ block.settings.des }}</div>
                {%- endif -%}
                {%- if block.settings.button_text != blank -%}
                    <a href="{{ block.settings.button_link }}" class="btn {{ block.settings.style_btn }}">
                      {{ block.settings.button_text }}
                    </a>
                {%- endif -%}
                </div>
                
          </div>
        {%- endfor -%}
      </div>
  
      {%- if section.blocks.size == 0 -%}
        {%- render 'no-blocks' -%}
      {%- endif -%}
    </div>
  </div>
  </div>
  
  
