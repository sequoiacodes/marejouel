<!-- grid-banner-2.liquid -->
<div class="customstyle{{ section.id }} banner-theme-text" data-aos="{{ section.settings.animation }}" >
  {%- render 'style-section' -%}
<div class="{{ section.settings.setwidth }}">
  <div class="section-block">
    {%- render 'section-heading' -%}
    <div class="row {% if section.settings.no_gutter %}no-gutters{% endif %}">
      {%- for block in section.blocks -%}
      <style>
       .banner-{{ block.id }}{
         border:1px solid {{ block.settings.border_banner }};
         background-color:{{ block.settings.bg_banner }};
         position:relative;
       }
      </style>
      <div class="col-md-{{ block.settings.width }}" {{ block.shopify_attributes }} data-aos="{{ section.settings.animation }}" data-aos-delay="{{ forloop.index | times: 100 }}">
      <div class="banner-{{ block.id }}" style="padding:{{ block.settings.paddingblock }}">
        <figure class="position-relative m-0 hv-image-saturate text-{{ block.settings.text_align }} {% if section.settings.no_gutter %}m-0{% endif %} d-flex {{ block.settings.reverse }}">
          {%- if block.settings.image != blank -%}
          {%- if block.settings.button_link != blank -%}<a href="{{block.settings.button_link}}"> {%- endif -%}
          <img src="{{ block.settings.image | image_url: width: 1, height: 1 }}" class="lazyload transition" data-src="{{ block.settings.image | image_url: width: 1920 }}"
            loading="lazy"
                width="{{ block.settings.image.width }}"
                height="{{ block.settings.image.height }}" ">
          {%- if block.settings.button_link != blank -%}</a> {%- endif -%}
          {%- else -%}
          {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
          {%- endif -%}
          <figcaption class="figcaption--{{ block.id }} py-4">
            {%- if block.settings.description -%}
            {{ block.settings.description }}
            {%- endif -%}
            {%- if block.settings.button_text != blank -%}
            <a href="{{ block.settings.button_link }}" class="btn {{ block.settings.style_btn }}">
             {{ block.settings.button_text }}
            </a>
            {%- endif -%}
          </figcaption>		
        </figure>
        </div>
      </div>
      {%- endfor -%}
    </div>
  </div>
</div>
</div>
  
