<!-- carousel-special.liquid -->
<style>
.customstyle{{ section.id }}::before{
  content: "";
  position: absolute;
  background-color:{{ section.settings.bgsecond }};
  bottom: 0;
  height: 200px;
  width: 100%;
  z-index: 0;
}
@media only screen and (max-width: 989px){
  .customstyle{{ section.id }}::before{
    display: none;
  }
}
</style>
<div class="customstyle{{ section.id }} position-relative">
    {%- render 'style-section', 
      id: section.id,
      bgsection: section.settings.bgsection,
      paddingsection: section.settings.paddingsection,
      marginsection: section.settings.marginsection,
      paddingmobile: section.settings.paddingmobile,
      marginmobile: section.settings.marginmobile -%}
  <div class="full">
    <div class="section-block">
      <div class="row">
        <div class="col-12 col-md-7 offset-md-5">
          {%- if section.settings.title != blank -%}
            <h3 class="text-uppercase carousel-title" data-aos="{{ section.settings.animation }}" data-aos-duration="300">{{ section.settings.title }}</h3>
          {%- endif -%}
        </div>
      </div>
      {%- if section.blocks.size > 0 -%}
      <div class="carousel-wrapper dots-negative container" > 
        <div class="carousel-slider row mb-0" id="Carousel-{{ section.id }}" 
             data-rows="{{ section.settings.rows }}"
             data-slidesToShow="1"
             data-slidestoscroll="1"
             data-arrows="{{ section.settings.arrows }}"
             data-dots="{{ section.settings.dots }}" 
             data-draggable="{{ section.settings.draggable }}" 
             data-infinite="false" 
             data-section-id="{{ section.id }}" 
             data-section-type="slickCarousels">
          {%- for block in section.blocks -%}
          <div class="carousel__slide-wrapper carousel__slide-wrapper--{{ block.id }}" {{ block.shopify_attributes }}>
            <div class="carousel__slide">
              <div class="carousel-wrap position-relative">
                <div class="row">
                  <div class="col-12 col-md-8">
                    {%- if block.settings.image != blank -%}
                    <div class="pl-md-5 position-relative ">
                      {%- if block.settings.title_small != blank -%}
                        <div data-aos="fade" data-aos-duration="100"> <div class="subtop sub-title" >{{ block.settings.title_small }}</div></div>
                      {%- endif -%}
                      <div class="position-relative " data-aos="{{ section.settings.animation }}" data-aos-duration="700">
                        <div class="image-content__image-wrapper" style="padding-top:{{ 1 | divided_by: block.settings.image.aspect_ratio | times: 100 }}%;">
                          {% assign img_url = block.settings.image | image_url: width: 1 | replace: 'width=1', 'width={width}' %}
                          <a href="#">
                            <img class="image-content__image lazyload"
                                src="{{ block.settings.image | image_url: width: 300, height: 300 }}"
                                data-src="{{ img_url }}"
                                data-widths="[180, 360, 540, 720, 900, 1080, 1296, 1512, 1728, 1944, 2048]"
                                data-aspectratio="{{ block.settings.image.aspect_ratio }}"
                                data-sizes="auto"
                                alt="{{ block.settings.image.alt | escape }}"
                                loading="lazy"
                                width="{{ block.settings.image.width }}"
                                height="{{ block.settings.image.height }}">
                          </a>
                        </div>
                        
                      </div>
                    </div>
                    {%- else -%}
                        <div class="image-content__image">
                          {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                      </div>
                    {%- endif -%}
                  </div>
                </div>
                  <div class="carousel-wrap--content" data-aos="{{ section.settings.animation }}" data-aos-duration="1000">
                      {{ block.settings.quote }}
                  </div>
              </div>
            </div>
          </div>
          {%- endfor -%}
        </div>
      </div>
      {%- endif -%}
  
      {%- if section.blocks.size == 0 -%}
      {%- render 'no-blocks' -%}
      {%- endif -%}
    </div>
  </div>
  </div>
  
