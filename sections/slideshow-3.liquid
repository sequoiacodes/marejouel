                    assign align = 'justify-content-center'
                  when 'right top'
                    assign align = 'justify-content-start'
                  when 'left center'
                    assign align = 'justify-content-start'
                  when 'center center'
                    assign align = 'justify-content-center'
                  when 'right center'
                    assign align = 'justify-content-start'
                  when 'left bottom'
                    assign align = 'justify-content-start'
