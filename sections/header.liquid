{%- liquid
  assign layout_header = section.settings.layout_header
  assign header_border_color = section.settings.background | color_mix: section.settings.textcolor, 86
  assign type_sticky = section.settings.type_sticky
  assign height_header = section.settings.height_header
  assign enable_menu_vertical = section.settings.enable_menu_vertical  
  assign container = section.settings.setwidth
  assign sl_menu_vertical = section.settings.sl_menu_vertical
  assign main_linklist = section.settings.main_linklist
  assign blocks = section.blocks
-%}
{% style %}
  .hover:hover{
    background:var(--header-background) !important;
  }
{% endstyle %}
{% render 'header-oncss', layout_header: layout_header, header_border_color: header_border_color, type_sticky: type_sticky %}
<!-- header.liquid -->
<header class="hover {% if section.settings.menu_active == 'thick-line' %} thick-lineactive {% endif %} {{ layout_header }} size-header-{{ height_header }} section-{{ section.id }} site-header page-element is-moved-by-drawer 
  header-{{ type_sticky }}
  {% if type_sticky == 'sticky' or type_sticky == 'sticky-top' %}
    site-header--sticky
  {% endif %} 
  {% if section.settings.enable_transparent %} site-header--transparent {% if section.settings.enable_white %}site-header-white {% endif %} {% endif %} site-header--full 
  {% if template contains 'index' %} index-header {% endif %}" 
  role="banner" 
  data-section-id="{{ section.id }}" 
  data-section-type="header" 
  data-sticky="{{ type_sticky }}" >
  {%- for block in section.blocks -%}
    {%- if block.type == 'topbar' -%}
        {% render 'header-topbar', 
          text_topbar: block.settings.text_topbar, 
          enable_login_topbar: block.settings.enable_login_topbar,
          enable_money_topbar: block.settings.enable_money_topbar,
          enable_language_topbar: block.settings.enable_language_topbar,
          enable_social_topbar: block.settings.enable_social_topbar,
          enable_name: section.settings.enable_name, 
          enable_image: section.settings.enable_image
         %}
    {%- endif -%}
  {%- endfor -%}
  
  <div class="header-bottom py-2 py-lg-0 ">
    <div class="">
      <div class="d-flex row-header align-items-center">
        
        {%- liquid
          case layout_header
          when 'logo-center-navigation-center'
            render 'header-logo-center-nav-center', container : container, enable_menu_vertical: enable_menu_vertical, sl_menu_vertical: sl_menu_vertical, main_linklist: main_linklist, blocks: blocks
          when 'logo-left-navigation-underleft'
            render 'header-logo-left-nav-left', container : container, enable_menu_vertical: enable_menu_vertical, sl_menu_vertical: sl_menu_vertical, main_linklist: main_linklist, blocks: blocks
          when 'logo-center-navigation-split'
            render 'header-logo-center-split', container : container, enable_menu_vertical: enable_menu_vertical, sl_menu_vertical: sl_menu_vertical, main_linklist: main_linklist, blocks: blocks
          when 'logo-center-navigation-drawer' 
            render 'header-logo-center-drawer', container : container
          else
            render 'header-logo-left' , container : container, layout_header : layout_header, enable_menu_vertical: enable_menu_vertical, sl_menu_vertical: sl_menu_vertical, main_linklist: main_linklist, blocks: blocks
          endcase
        -%}
      </div>
    </div>
  </div>
  {%- if enable_menu_vertical -%}
    {% unless layout_header == 'logo-center-navigation-split' or layout_header == 'logo-center-navigation-drawer' %}
      {% render 'slide-menu' %}
    {% endunless %}
  {%- endif -%}
</header>
<div class="group-fixed d-lg-flex d-none">
{% render 'show-newlleter' %}
{%- if settings.enable_compare  and settings.enable_popuptext -%} â€” {%- endif -%}
