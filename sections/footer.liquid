{% stylesheet %}
.footer {
  background-color: #2d2d2d;
  color: #ccc;
  font-family: Arial, sans-serif;
}

.footer-top-border,
.footer-bottom-border {
  height: 4px;
  background-color: #7e3ff2;
}

.footer-container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 40px 20px;
}

.footer-grid {
  display: grid;
  grid-template-columns: 1fr;
  gap: 30px;
}

@media (min-width: 768px) {
  .footer-grid {
    grid-template-columns: repeat(2, 1fr);
  }
}

@media (min-width: 1024px) {
  .footer-grid {
    grid-template-columns: repeat(5, 1fr);
  }
}

.footer h3,
.footer h4 {
  color: #fff;
  margin-bottom: 15px;
}

.footer p {
  font-size: 14px;
  line-height: 1.5;
}

.footer-links ul {
  list-style: none;
  padding: 0;
}

.footer-links ul li {
  margin-bottom: 8px;
}

.footer-links a {
  color: #aaa;
  text-decoration: none;
}

.footer-links a:hover {
  color: #fff;
}

.footer-social .social-icons {
  display: flex;
  gap: 10px;
}

.footer-social img {
  width: 20px;
  height: 20px;
  filter: grayscale(100%);
  transition: filter 0.3s;
}

.footer-social img:hover {
  filter: none;
}

.footer-newsletter p {
  font-size: 14px;
  margin-bottom: 10px;
}

.newsletter-form {
  display: flex;
  flex-direction: column;
  gap: 10px;
}

.newsletter-form input {
  padding: 8px;
  border: 1px solid #555;
  background-color: #444;
  color: #fff;
}

.newsletter-form button {
  background-color: #444;
  border: 1px solid #555;
  padding: 8px;
  color: #fff;
  cursor: pointer;
}

.newsletter-form button:hover {
  background-color: #555;
}

.footer-bottom {
  border-top: 1px solid #555;
}

.footer-bottom-container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 15px 20px;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  align-items: center;
}

.footer-copy {
  font-size: 13px;
}

.footer-payments {
  display: flex;
  gap: 8px;
  align-items: center;
}

.payment-card {
  background-color: #444;
  color: #fff;
  font-size: 12px;
  padding: 3px 6px;
  border-radius: 3px;
}

.secure-badge {
  background-color: green;
  color: #fff;
  font-size: 12px;
  padding: 3px 6px;
  border-radius: 3px;
}

.footer-legal {
  display: flex;
  gap: 15px;
}

.footer-legal a {
  font-size: 13px;
  color: #aaa;
  text-decoration: none;
}

.footer-legal a:hover {
  color: #fff;
}
{% endstylesheet %}

<footer class="footer">
  <!-- Purple top border -->
  <div class="footer-top-border"></div>

  <div class="footer-container">
    <div class="footer-grid">

      <!-- Brand -->
      <div class="footer-brand">
        <h3>{{ section.settings.brand_title }}</h3>
        <p>{{ section.settings.brand_text }}</p>

        <div class="footer-social">
          <h4>Stay Connected</h4>
          <div class="social-icons">
            {% for link in section.blocks %}
              {% if link.type == 'social_link' %}
                <a href="{{ link.settings.url }}" target="_blank">
                  <img src="{{ link.settings.icon | image_url }}" alt="Social">
                </a>
              {% endif %}
            {% endfor %}
          </div>
        </div>
      </div>

      <!-- Quick Links -->
      <div class="footer-links">
        <h4>{{ section.settings.quick_links_title }}</h4>
        <ul>
          {% for link in linklists[section.settings.quick_links_menu].links %}
            <li><a href="{{ link.url }}">{{ link.title }}</a></li>
          {% endfor %}
        </ul>
      </div>

      <!-- Collections -->
      <div class="footer-links">
        <h4>{{ section.settings.collection_links_title }}</h4>
        <ul>
          {% for link in linklists[section.settings.collection_links_menu].links %}
            <li><a href="{{ link.url }}">{{ link.title }}</a></li>
          {% endfor %}
        </ul>
      </div>

      <!-- Privacy -->
      <div class="footer-links">
        <h4>{{ section.settings.privacy_links_title }}</h4>
        <ul>
          {% for link in linklists[section.settings.privacy_links_menu].links %}
            <li><a href="{{ link.url }}">{{ link.title }}</a></li>
          {% endfor %}
        </ul>
      </div>

      <!-- Newsletter -->
      <div class="footer-newsletter">
        <h4>{{ section.settings.newsletter_title }}</h4>
        <p>{{ section.settings.newsletter_text }}</p>
        <form method="post" action="/contact#ContactFooter" id="ContactFooter" accept-charset="UTF-8" class="newsletter-form">
          <input type="hidden" name="form_type" value="customer">
          <input type="hidden" name="utf8" value="âœ“">
          <input type="email" name="contact[email]" placeholder="Your Email" required>
          <button type="submit">{{ section.settings.newsletter_button }}</button>
        </form>
      </div>
    </div>
  </div>

  <div class="footer-bottom">
    <div class="footer-bottom-container">
      <div class="footer-copy">Â© {{ 'now' | date: "%Y" }} {{ section.settings.brand_title }}. All Rights Reserved.</div>

      <div class="footer-payments">
        {% for card in section.blocks %}
          {% if card.type == 'payment_icon' %}
            <span class="payment-card">{{ card.settings.card_text }}</span>
          {% endif %}
        {% endfor %}
        <span class="secure-badge">{{ section.settings.secure_text }}</span>
      </div>

      <div class="footer-legal">
        {% for link in linklists[section.settings.legal_links_menu].links %}
          <a href="{{ link.url }}">{{ link.title }}</a>
        {% endfor %}
      </div>
    </div>
  </div>

  <div class="footer-bottom-border"></div>
</footer>

{% schema %}
