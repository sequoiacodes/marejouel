{% schema %}
{
  "name": "Custom Footer",
  "settings": [
    {
      "type": "text",
      "id": "brand_title",
      "label": "Brand Name",
      "default": "Mare Jouel Swimwear"
    },
    {
      "type": "textarea",
      "id": "brand_desc",
      "label": "Brand Description",
      "default": "Mare Jouel is a sustainable swimwear brand committed to ethical fashion and ocean conservation."
    },
    {
      "type": "header",
      "content": "Social Media Links"
    },
    { "type": "url", "id": "facebook_url", "label": "Facebook URL" },
    { "type": "url", "id": "instagram_url", "label": "Instagram URL" },
    { "type": "url", "id": "tiktok_url", "label": "TikTok URL" },
    { "type": "url", "id": "pinterest_url", "label": "Pinterest URL" },
    {
      "type": "header",
      "content": "Footer Menus"
    },
    { "type": "link_list", "id": "quick_links", "label": "Quick Links Menu" },
    { "type": "link_list", "id": "collections_menu", "label": "Our Collections Menu" },
    { "type": "link_list", "id": "privacy_menu", "label": "Privacy & Security Menu" }
  ],
  "presets": [
    { "name": "Custom Footer" }
  ]
}
{% endschema %}

<footer class="custom-footer">
  <div class="footer-top">
    <!-- Brand Info -->
    <div>
      <h2>{{ section.settings.brand_title }}</h2>
      <p>{{ section.settings.brand_desc }}</p>
      <h3>Stay Connected</h3>
      <div class="social-links">
        {% if section.settings.facebook_url %}
        <a href="{{ section.settings.facebook_url }}" target="_blank">FB</a>
        {% endif %}
        {% if section.settings.instagram_url %}
        <a href="{{ section.settings.instagram_url }}" target="_blank">IG</a>
        {% endif %}
        {% if section.settings.tiktok_url %}
        <a href="{{ section.settings.tiktok_url }}" target="_blank">TT</a>
        {% endif %}
        {% if section.settings.pinterest_url %}
        <a href="{{ section.settings.pinterest_url }}" target="_blank">PI</a>
        {% endif %}
      </div>
    </div>

    <!-- Quick Links -->
    <div>
      <h3>Quick Links</h3>
      <ul>
        {% for link in linklists[section.settings.quick_links].links %}
          <li><a href="{{ link.url }}">{{ link.title }}</a></li>
        {% endfor %}
      </ul>
    </div>

    <!-- Our Collections -->
    <div>
      <h3>Our Collections</h3>
      <ul>
        {% for link in linklists[section.settings.collections_menu].links %}
          <li><a href="{{ link.url }}">{{ link.title }}</a></li>
        {% endfor %}
      </ul>
    </div>

    <!-- Privacy & Security -->
    <div>
      <h3>Privacy & Security</h3>
      <ul>
        {% for link in linklists[section.settings.privacy_menu].links %}
          <li><a href="{{ link.url }}">{{ link.title }}</a></li>
        {% endfor %}
      </ul>
    </div>

    <!-- Newsletter -->
    <div>
      <h3>Newsletter</h3>
      <p>Subscribe to get notified about early access to collections, exclusive offers and sustainability tips.</p>
      {% form 'customer' %}
        <input type="email" name="contact[email]" placeholder="Your Email" required>
        <button type="submit">Subscribe</button>
      {% endform %}
    </div>
  </div>

  <!-- Bottom bar -->
  <div class="footer-bottom">
    <p>Â© {{ 'now' | date: "%Y" }} {{ section.settings.brand_title }}. All Rights Reserved.</p>
    <div class="payment-icons">
      <img src="{{ 'visa.svg' | asset_url }}" alt="Visa">
      <img src="{{ 'mastercard.svg' | asset_url }}" alt="Mastercard">
      <img src="{{ 'paypal.svg' | asset_url }}" alt="PayPal">
    </div>
  </div>
</footer>

<style>
.custom-footer {
  background: #000;
  color: #fff;
  padding: 40px 20px;
  font-family: Arial, sans-serif;
}
.footer-top {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
  gap: 20px;
  margin-bottom: 20px;
}
.custom-footer h2, .custom-footer h3 {
  margin-bottom: 10px;
}
.custom-footer p {
  margin-bottom: 15px;
  font-size: 14px;
  line-height: 1.5;
}
.social-links a {
  display: inline-block;
  margin-right: 10px;
  background: #fff;
  color: #000;
  padding: 6px 8px;
  border-radius: 50%;
  text-decoration: none;
  font-weight: bold;
}
.footer-bottom {
  border-top: 1px solid #333;
  padding-top: 15px;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}
.footer-bottom img {
  height: 24px;
  margin-right: 8px;
}
</style>
