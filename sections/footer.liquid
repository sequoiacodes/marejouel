  "name": "Custom Footer",
  "settings": [
    { "type": "text", "id": "brand_title", "label": "Brand Title", "default": "Mare Jouel Swimwear" },
    { "type": "textarea", "id": "brand_text", "label": "Brand Description", "default": "Mare Jouel is a sustainable swimwear brand committed to ethical fashion and ocean conservation." },
    { "type": "text", "id": "quick_links_title", "label": "Quick Links Title", "default": "Quick Links" },
    { "type": "link_list", "id": "quick_links_menu", "label": "Quick Links Menu" },
    { "type": "text", "id": "collection_links_title", "label": "Collections Title", "default": "Our Collections" },
    { "type": "link_list", "id": "collection_links_menu", "label": "Collections Menu" },
    { "type": "text", "id": "privacy_links_title", "label": "Privacy Title", "default": "Privacy & Security" },
    { "type": "link_list", "id": "privacy_links_menu", "label": "Privacy Menu" },
    { "type": "text", "id": "newsletter_title", "label": "Newsletter Title", "default": "Newsletter" },
    { "type": "textarea", "id": "newsletter_text", "label": "Newsletter Description", "default": "Subscribe to get notified about early access to collections, exclusive offers and sustainability tips." },
    { "type": "text", "id": "newsletter_button", "label": "Newsletter Button Text", "default": "Subscribe" },
    { "type": "text", "id": "secure_text", "label": "Secure Badge Text", "default": "ðŸ”’ 100% SECURE" },
    { "type": "link_list", "id": "legal_links_menu", "label": "Legal Links Menu" }
  ],
  "blocks": [
    {
      "type": "social_link",
      "name": "Social Link",
      "settings": [
        { "type": "url", "id": "url", "label": "Social URL" },
        { "type": "image_picker", "id": "icon", "label": "Social Icon" }
      ]
    },
    {
      "type": "payment_icon",
      "name": "Payment Icon",
      "settings": [
        { "type": "text", "id": "card_text", "label": "Card Label" }
      ]
    }
  ],
  "max_blocks": 15,
  "presets": [
    { "name": "Custom Footer", "category": "Footer" }
  ]
}
{% endschema %}
