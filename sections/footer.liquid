<style>
  /* Updated styles for dark theme */
  .site-footer {
    --footer-bg: #000000;
    --footer-text: #ffffff;
    --footer-title: #ffffff;
    --footer-text-hover: #dddddd;
    --footer-font-size: 14px;
    --footer-font-weight: 600;
    --footer-font-space: 0.1em;
    --footer-font-type: uppercase;
    --footer-head-border: #333333;
    --bottom-copy-border: #333333;
    --color-footer-text-rgb: 255, 255, 255;
  }
  
  .site-footer .site-footer__section-title {
    font-size: 16px;
    margin-bottom: 20px;
    letter-spacing: 0.05em;
  }
  
  .site-footer__list-item {
    margin-bottom: 8px;
  }
  
  .footer-brand {
    max-width: 250px;
  }
  
  .footer-brand h2 {
    font-size: 24px;
    font-weight: 700;
    margin-bottom: 15px;
    letter-spacing: 0.05em;
    color: #ffffff;
  }
  
  .footer-brand p {
    font-size: 14px;
    line-height: 1.6;
    color: #cccccc;
  }
  
  .social-icons-row {
    display: flex;
    gap: 15px;
    margin-bottom: 15px;
  }
  
  .social-icons-row a {
    color: white;
    transition: color 0.3s ease;
  }
  
  .social-icons-row a:hover {
    color: #dddddd;
  }
  
  .social-icons-row .icon {
    width: 24px;
    height: 24px;
    fill: currentColor;
  }
  
  .quick-links-title {
    font-weight: 600;
    margin-bottom: 10px;
    font-size: 14px;
    color: #ffffff;
  }
  
  .footer-newsletter {
    background: #111111;
    padding: 25px;
    border-radius: 4px;
  }
  
  .footer-email .form-control {
    border: 1px solid #333333;
    background: #222222;
    color: white;
    padding: 12px 15px;
    margin-bottom: 15px;
  }
  
  .footer-email .form-control::placeholder {
    color: #aaaaaa;
  }
  
  .footer-email .btn-theme {
    background: #ffffff;
    color: #000000;
    border: none;
    padding: 12px 25px;
    width: 100%;
    font-weight: 600;
    letter-spacing: 0.05em;
    transition: all 0.3s ease;
  }
  
  .footer-email .btn-theme:hover {
    background: #dddddd;
  }
  
  .site-footer__copyright {
    padding: 20px 0;
    border-top: 1px solid #333333;
    font-size: 13px;
    color: #aaaaaa;
  }
  
  .payment-icons {
    display: flex;
    gap: 10px;
    margin-top: 15px;
    align-items: center;
  }
  
  .payment-icons svg {
    height: 24px;
    width: auto;
    filter: brightness(0) invert(1);
  }
  
  .payment-icons .text-icon {
    color: white;
    font-size: 14px;
    font-weight: 600;
  }
  
  .footer-bottom-links {
    display: flex;
    gap: 20px;
    margin-top: 10px;
  }
  
  .footer-bottom-links a {
    color: #aaaaaa;
    transition: color 0.3s ease;
  }
  
  .footer-bottom-links a:hover {
    color: #ffffff;
  }
  
  @media (max-width: 749px) {
    .row .footer-column {
      margin-bottom: 30px;
    }
    
    .footer-newsletter {
      padding: 20px;
    }
    
    .footer-bottom-links {
      flex-wrap: wrap;
      gap: 10px 20px;
    }
  }
</style>

