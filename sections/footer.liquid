<!-- footer.liquid -->

<style>
  /* Updated styles to match the design */
  .site-footer {
    --footer-bg: #ffffff;
    --footer-text: #000000;
    --footer-title: #000000;
    --footer-text-hover: #555555;
    --footer-font-size: 14px;
    --footer-font-weight: 600;
    --footer-font-space: 0.1em;
    --footer-font-type: uppercase;
    --footer-head-border: #eaeaea;
    --bottom-copy-border: #eaeaea;
    --color-footer-text-rgb: 0, 0, 0;
  }
  
  .site-footer .site-footer__section-title {
    font-size: 16px;
    margin-bottom: 20px;
    letter-spacing: 0.05em;
  }
  
  .site-footer__list-item {
    margin-bottom: 8px;
  }
  
  .footer-brand {
    max-width: 250px;
  }
  
  .footer-brand h2 {
    font-size: 24px;
    font-weight: 700;
    margin-bottom: 15px;
    letter-spacing: 0.05em;
  }
  
  .footer-brand p {
    font-size: 14px;
    line-height: 1.6;
    color: #666;
  }
  
  .social-icons-row {
    display: flex;
    gap: 15px;
    margin-bottom: 15px;
  }
  
  .social-icons-row .icon {
    width: 24px;
    height: 24px;
  }
  
  .quick-links-title {
    font-weight: 600;
    margin-bottom: 10px;
    font-size: 14px;
  }
  
  .footer-newsletter {
    background: #f9f9f9;
    padding: 25px;
    border-radius: 4px;
  }
  
  .footer-email .form-control {
    border: 1px solid #ddd;
    background: #fff;
    padding: 12px 15px;
    margin-bottom: 15px;
  }
  
  .footer-email .btn-theme {
    background: #000;
    color: #fff;
    border: none;
    padding: 12px 25px;
    width: 100%;
    font-weight: 600;
    letter-spacing: 0.05em;
  }
  
  .footer-email .btn-theme:hover {
    background: #333;
  }
  
  .site-footer__copyright {
    padding: 20px 0;
    border-top: 1px solid #eaeaea;
    font-size: 13px;
    color: #666;
  }
  
  .payment-icons {
    display: flex;
    gap: 10px;
    margin-top: 15px;
  }
  
  .payment-icons svg {
    height: 24px;
    width: auto;
  }
  
  .footer-bottom-links {
    display: flex;
    gap: 20px;
    margin-top: 10px;
  }
  
  @media (max-width: 749px) {
    .row .footer-column {
      margin-bottom: 30px;
    }
    
    .footer-newsletter {
      padding: 20px;
    }
    
    .footer-bottom-links {
      flex-wrap: wrap;
      gap: 10px 20px;
    }
  }
</style>

{%- liquid
  assign bg_image = section.settings.image_bg
  assign footer_align_title = section.settings.footer_align_title
  assign acc_mobile = section.settings.acc_mobile
-%}
<footer class="site-footer lazyload footer-{{ section.id }} {% if acc_mobile %} footer-acc-mobile{% endif %}">
  <div class="site-footer--head">
    <div class="{{ section.settings.setwidth }}">
      <div class="row">
        <!-- Brand & Description Block -->
        <div class="col-lg-3 col-md-6 footer-column" {{ block.shopify_attributes }}>
          <div class="site-footer__section footer-brand">
            <h2>Mare Jonal Swinnwear</h2>
            <p>Mare Jonal is a sustainable swimwear brand committed to ethical fashion and ocean conservation.</p>
          </div>
        </div>
        
        <!-- Stay Connected Block -->
        <div class="col-lg-2 col-md-6 footer-column" {{ block.shopify_attributes }}>
          <div class="site-footer__section">
            <h4 class="h5 site-footer__section-title">Stay Connected</h4>
            <div class="site-footer__list site-footer-block">
              <div class="social-icons-row">
                <!-- Social icons would go here -->
                <span>ðŸ’¬</span>
                <span>ðŸ’¬</span>
                <span>ðŸ’¬</span>
              </div>
              <div class="quick-links-title">Quick Links</div>
              <ul class="site-footer__list">
                <li class="site-footer__list-item"><a href="/">Home</a></li>
                <li class="site-footer__list-item"><a href="/pages/about-us">About Us</a></li>
                <li class="site-footer__list-item"><a href="/blogs/news">Blog</a></li>
                <li class="site-footer__list-item"><a href="/pages/contact-us">Contact Us</a></li>
              </ul>
            </div>
          </div>
        </div>
        
        <!-- Collections Block -->
        <div class="col-lg-2 col-md-6 footer-column" {{ block.shopify_attributes }}>
          <div class="site-footer__section">
            <h4 class="h5 site-footer__section-title">Our Collections</h4>
            <ul class="site-footer__list site-footer-block">
              <li class="site-footer__list-item"><a href="/collections/demure">The Demure Collection</a></li>
              <li class="site-footer__list-item"><a href="/collections/summer-essentials">Summer Essentials</a></li>
              <li class="site-footer__list-item"><a href="/collections/summer-25">Summer '25 Collections</a></li>
            </ul>
          </div>
        </div>
        
        <!-- Privacy & Security Block -->
        <div class="col-lg-2 col-md-6 footer-column" {{ block.shopify_attributes }}>
          <div class="site-footer__section">
            <h4 class="h5 site-footer__section-title">Privacy & Security</h4>
            <ul class="site-footer__list site-footer-block">
              <li class="site-footer__list-item"><a href="/policies/terms-of-service">Terms & Condition</a></li>
              <li class="site-footer__list-item"><a href="/policies/privacy-policy">Privacy & Policy</a></li>
              <li class="site-footer__list-item"><a href="/policies/cookie-policy">Cookie Policy</a></li>
            </ul>
          </div>
        </div>
        
        <!-- Newsletter Block -->
        <div class="col-lg-3 col-md-6 footer-column" {{ block.shopify_attributes }}>
          <div class="site-footer__section footer-newsletter">
            <h4 class="h5 site-footer__section-title">Newsletter</h4>
            <div class="site-footer-block">
              <div class="form-vertical footer-email">
                {%- form 'customer', id: 'ContactFooter', class: 'footer__newsletter newsletter-form' -%}
                  <p>Subscribe to get notified about early access to collections, exclusive offers and sustainability tips.</p>
                  <input 
                    type="email" 
                    name="contact[email]" 
                    id="NewsletterEmail" 
                    class="form-control w-100 mb-3" 
                    placeholder="Your Email"
                    aria-label="Your Email"
                    required
                  >
                  <button type="submit" class="btn btn-theme" name="commit">
                    Subscribe
                  </button>
                {%- endform -%}
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <div class="site-footer__copyright">
    <div class="{{ section.settings.setwidth }}">
      <div class="d-flex flex-lg-row flex-column justify-content-between align-items-center">
        <div>
          <p>&copy; 2025 Mare Jonal. All Rights Reserved.</p>
        </div>
        
        <div class="d-flex flex-column align-items-lg-end align-items-center">
          <div class="payment-icons">
            <!-- Payment icons would go here -->
            <span>VISA</span>
            <span>P</span>
            <span>G Pay</span>
            <span>IOWs account</span>
          </div>
          
          <div class="footer-bottom-links">
            <a href="/policies/terms-of-service">Terms of Usage</a>
            <a href="/policies/terms-of-service">Conditions</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</footer>

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "select",
      "id": "setwidth",
      "label": "Full Width",
      "default": "container",
      "options": [
        {"value": "container", "label": "Box"},
        {"value": "container-fluid", "label": "Container Fluid"},
        {"value": "full", "label": "Full"}
      ]
    },
    {
      "type": "checkbox",
      "id": "acc_mobile",
      "label": "Enable Accordion Mobile",
      "default": true
    },
    {
      "type": "header",
      "content": "Footer Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding Top",
      "max": 200,
      "min": 0,
      "step": 4,
      "unit": " px",
      "default": 64
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding Bottom",
      "max": 200,
      "min": 0,
      "step": 4,
      "unit": " px",
      "default": 64
    },
    {
      "type": "header",
      "content": "Footer Padding Mobile"
    },
    {
      "type": "range",
      "id": "m_padding_top",
      "label": "Padding Top Mobile",
      "max": 200,
      "min": 0,
      "step": 4,
      "unit": " px",
      "default": 32
    },
    {
      "type": "range",
      "id": "m_padding_bottom",
      "label": "Padding Bottom Mobile",
      "max": 200,
      "min": 0,
      "step": 4,
      "unit": " px",
      "default": 32
    }
  ]
}
{% endschema %}