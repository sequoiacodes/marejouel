{% doc %}
  @prompt
    Create a customizable donate button that can be styled to match the website theme, with options for button text, donation amount, and link to payment processor

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-donate-button-container-{{ ai_gen_id }} {
    display: flex;
    justify-content: {{ block.settings.alignment }};
    padding: {{ block.settings.container_padding }}px 0;
  }

  .ai-donate-button-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
    background-color: {{ block.settings.button_background_color }};
    color: {{ block.settings.button_text_color }};
    border: {{ block.settings.border_width }}px solid {{ block.settings.border_color }};
    border-radius: {{ block.settings.border_radius }}px;
    font-size: {{ block.settings.font_size }}px;
    font-weight: {{ block.settings.font_weight }};
    text-transform: {{ block.settings.text_transform }};
    letter-spacing: {{ block.settings.letter_spacing }}em;
    text-decoration: none;
    cursor: pointer;
    transition: all 0.3s ease;
    box-shadow: {{ block.settings.shadow_horizontal }}px {{ block.settings.shadow_vertical }}px {{ block.settings.shadow_blur }}px rgba(0, 0, 0, {{ block.settings.shadow_opacity }});
  }

  .ai-donate-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_background_color }};
    color: {{ block.settings.button_hover_text_color }};
    border-color: {{ block.settings.border_hover_color }};
    transform: translateY(-{{ block.settings.hover_lift }}px);
    box-shadow: {{ block.settings.shadow_horizontal }}px {{ block.settings.shadow_vertical | plus: block.settings.hover_lift }}px {{ block.settings.shadow_blur | plus: 2 }}px rgba(0, 0, 0, {{ block.settings.shadow_opacity | plus: 0.1 }});
  }

  .ai-donate-button-{{ ai_gen_id }}:focus {
    outline: 2px solid {{ block.settings.button_background_color }};
    outline-offset: 2px;
  }

  .ai-donate-icon-{{ ai_gen_id }} {
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
    fill: currentColor;
  }

  .ai-donate-amount-{{ ai_gen_id }} {
    font-weight: 600;
    margin-left: 4px;
  }

  @media screen and (max-width: 749px) {
    .ai-donate-button-{{ ai_gen_id }} {
      font-size: {{ block.settings.font_size | times: 0.9 }}px;
      padding: {{ block.settings.button_padding_vertical | times: 0.8 }}px {{ block.settings.button_padding_horizontal | times: 0.8 }}px;
    }

    .ai-donate-icon-{{ ai_gen_id }} {
      width: {{ block.settings.icon_size | times: 0.9 }}px;
      height: {{ block.settings.icon_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<div class="ai-donate-button-container-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <a
    href="{{ block.settings.donation_link }}"
    class="ai-donate-button-{{ ai_gen_id }}"
    {% if block.settings.open_new_tab %}target="_blank" rel="noopener noreferrer"{% endif %}
    aria-label="{% if block.settings.donation_amount != blank %}Donate {{ block.settings.donation_amount }} - {% endif %}{{ block.settings.button_text | strip_html }}"
  >
    {% if block.settings.show_icon %}
      <svg class="ai-donate-icon-{{ ai_gen_id }}" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
        {% case block.settings.icon_style %}
          {% when 'heart' %}
            <path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"/>
          {% when 'hand' %}
            <path d="M13 1.07V9h7c1.1 0 2 .9 2 2 0 .74-.4 1.38-1 1.73v7.27c0 .55-.45 1-1 1s-1-.45-1-1V11h-1v8c0 .55-.45 1-1 1s-1-.45-1-1v-8h-1v7c0 .55-.45 1-1 1s-1-.45-1-1v-7H9v6c0 .55-.45 1-1 1s-1-.45-1-1V10c0-2.76 2.24-5 5-5V1.07c0-.59.48-1.07 1.07-1.07s1.07.48 1.07 1.07z"/>
          {% else %}
            <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
        {% endcase %}
      </svg>
    {% endif %}<span>
      {{ block.settings.button_text }}
      {% if block.settings.donation_amount != blank %}
        <span class="ai-donate-amount-{{ ai_gen_id }}">{{ block.settings.donation_amount }}</span>
      {% endif %}
    </span>
  </a>
</div>

