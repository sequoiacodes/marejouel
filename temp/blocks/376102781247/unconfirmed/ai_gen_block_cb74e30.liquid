{% doc %}
  @prompt
    Create a featured collections section with a layout that displays collection cards in a grid. Each collection card should have a background image with overlay text positioned to the left side, including a collection title, subtitle, and a "Shop Now" button aligned to the left. The section should have a main heading "FEATURED COLLECTIONS" and support multiple collection cards displayed horizontally. Include customizable settings for the section title, collection selection, and button styling.

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-featured-collections-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding_top }}px 0 {{ block.settings.section_padding_bottom }}px;
    background-color: {{ block.settings.section_background_color }};
  }

  .ai-featured-collections-container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-featured-collections-header-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: {{ block.settings.header_margin_bottom }}px;
  }

  .ai-featured-collections-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_font_size }}px;
    color: {{ block.settings.title_color }};
    margin: 0;
    font-weight: {{ block.settings.title_font_weight }};
    text-transform: {{ block.settings.title_text_transform }};
    letter-spacing: {{ block.settings.title_letter_spacing }}em;
  }

  .ai-featured-collections-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.columns_desktop }}, 1fr);
    gap: {{ block.settings.grid_gap }}px;
  }

  .ai-featured-collections-card-{{ ai_gen_id }} {
    position: relative;
    height: {{ block.settings.card_height }}px;
    border-radius: {{ block.settings.card_border_radius }}px;
    overflow: hidden;
    display: flex;
    align-items: center;
  }

  .ai-featured-collections-card-image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 1;
  }

  .ai-featured-collections-card-placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    z-index: 1;
  }

  .ai-featured-collections-card-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-featured-collections-card-overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      to right,
      rgba(0, 0, 0, {{ block.settings.overlay_opacity }}) 0%,
      rgba(0, 0, 0, {{ block.settings.overlay_opacity | times: 0.7 }}) 50%,
      transparent 100%
    );
    z-index: 2;
  }

  .ai-featured-collections-card-content-{{ ai_gen_id }} {
    position: relative;
    z-index: 3;
    padding: {{ block.settings.content_padding }}px;
    color: {{ block.settings.card_text_color }};
    text-align: left;
    max-width: 60%;
  }

  .ai-featured-collections-card-subtitle-{{ ai_gen_id }} {
    font-size: {{ block.settings.subtitle_font_size }}px;
    margin: 0 0 8px;
    opacity: 0.9;
    font-weight: {{ block.settings.subtitle_font_weight }};
    text-transform: {{ block.settings.subtitle_text_transform }};
  }

  .ai-featured-collections-card-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.card_title_font_size }}px;
    margin: 0 0 16px;
    font-weight: {{ block.settings.card_title_font_weight }};
    text-transform: {{ block.settings.card_title_text_transform }};
    line-height: 1.2;
  }

  .ai-featured-collections-card-button-{{ ai_gen_id }} {
    display: inline-block;
    padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
    background-color: {{ block.settings.button_background_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_font_size }}px;
    font-weight: {{ block.settings.button_font_weight }};
    text-transform: {{ block.settings.button_text_transform }};
    transition: all 0.3s ease;
    border: {{ block.settings.button_border_width }}px solid {{ block.settings.button_border_color }};
  }

  .ai-featured-collections-card-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_background_color }};
    color: {{ block.settings.button_hover_text_color }};
    border-color: {{ block.settings.button_hover_border_color }};
    transform: translateY(-2px);
  }

  @media screen and (max-width: 768px) {
    .ai-featured-collections-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_mobile }}, 1fr);
      gap: {{ block.settings.grid_gap | times: 0.75 }}px;
    }

    .ai-featured-collections-card-{{ ai_gen_id }} {
      height: {{ block.settings.card_height | times: 0.8 }}px;
    }

    .ai-featured-collections-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_font_size | times: 0.8 }}px;
    }

    .ai-featured-collections-card-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.card_title_font_size | times: 0.8 }}px;
    }

    .ai-featured-collections-card-subtitle-{{ ai_gen_id }} {
      font-size: {{ block.settings.subtitle_font_size | times: 0.9 }}px;
    }

    .ai-featured-collections-card-content-{{ ai_gen_id }} {
      max-width: 80%;
      padding: {{ block.settings.content_padding | times: 0.75 }}px;
    }
  }

  @media screen and (max-width: 480px) {
    .ai-featured-collections-grid-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
    }

    .ai-featured-collections-card-content-{{ ai_gen_id }} {
      max-width: 90%;
    }
  }
{% endstyle %}

<div class="ai-featured-collections-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-featured-collections-container-{{ ai_gen_id }}">
    {% if block.settings.section_title != blank %}
      <div class="ai-featured-collections-header-{{ ai_gen_id }}">
        <h2 class="ai-featured-collections-title-{{ ai_gen_id }}">{{ block.settings.section_title }}</h2>
      </div>
    {% endif %}

    <div class="ai-featured-collections-grid-{{ ai_gen_id }}">
      {% for i in (1..6) %}
        {% assign collection_key = 'collection_' | append: i %}
        {% assign subtitle_key = 'collection_' | append: i | append: '_subtitle' %}
        {% assign collection = block.settings[collection_key] %}
        {% assign subtitle = block.settings[subtitle_key] %}

        {% if collection != blank %}
          <div class="ai-featured-collections-card-{{ ai_gen_id }}">
            {% if collection.featured_image %}
              <img
                src="{{ collection.featured_image | image_url: width: 800 }}"
                alt="{{ collection.featured_image.alt | escape }}"
                class="ai-featured-collections-card-image-{{ ai_gen_id }}"
                loading="lazy"
                width="800"
                height="{{ block.settings.card_height }}"
              >
            {% else %}
              <div class="ai-featured-collections-card-placeholder-{{ ai_gen_id }}">
                {{ 'collection-1' | placeholder_svg_tag }}
              </div>
            {% endif %}

            <div class="ai-featured-collections-card-overlay-{{ ai_gen_id }}"></div>

            <div class="ai-featured-collections-card-content-{{ ai_gen_id }}">
              {% if subtitle != blank %}
                <p class="ai-featured-collections-card-subtitle-{{ ai_gen_id }}">{{ subtitle }}</p>
              {% endif %}
              <h3 class="ai-featured-collections-card-title-{{ ai_gen_id }}">{{ collection.title }}</h3>
              
              <a
                href="{{ collection.url }}"
                class="ai-featured-collections-card-button-{{ ai_gen_id }}"
              >
                {{ block.settings.button_text }}
              </a>
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

