{% doc %}
  @prompt
    Create a testimonials section with customer reviews that includes star ratings, customer quotes in large text, customer names, and space for a product or lifestyle image. The section should have a clean, modern design with proper spacing and typography that matches the style shown in the reference image.

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-testimonials-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding_top }}px 0 {{ block.settings.section_padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-testimonials-container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-testimonials-header-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: 60px;
  }

  .ai-testimonials-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
    margin: 0 0 16px;
    font-weight: 400;
    text-transform: uppercase;
    letter-spacing: 0.2em;
  }

  .ai-testimonials-subtitle-{{ ai_gen_id }} {
    font-size: {{ block.settings.subheading_size }}px;
    color: {{ block.settings.text_color }};
    margin: 0;
    line-height: 1.6;
  }

  .ai-testimonials-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 40px;
    align-items: start;
  }

  .ai-testimonial-card-{{ ai_gen_id }} {
    background-color: {{ block.settings.card_background_color }};
    padding: 40px;
    border-radius: {{ block.settings.card_border_radius }}px;
    text-align: center;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .ai-testimonial-card-{{ ai_gen_id }}:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.12);
  }

  .ai-testimonial-image-{{ ai_gen_id }} {
    width: 100%;
    height: 250px;
    margin-bottom: 30px;
    border-radius: {{ block.settings.image_border_radius }}px;
    overflow: hidden;
  }

  .ai-testimonial-image-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-testimonial-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-testimonial-image-placeholder-{{ ai_gen_id }} svg {
    width: 60px;
    height: 60px;
    opacity: 0.3;
  }

  .ai-testimonial-stars-{{ ai_gen_id }} {
    display: flex;
    justify-content: center;
    gap: 4px;
    margin-bottom: 24px;
  }

  .ai-testimonial-star-{{ ai_gen_id }} {
    width: {{ block.settings.star_size }}px;
    height: {{ block.settings.star_size }}px;
    fill: {{ block.settings.star_color }};
  }

  .ai-testimonial-star-empty-{{ ai_gen_id }} {
    fill: {{ block.settings.star_empty_color }};
  }

  .ai-testimonial-quote-{{ ai_gen_id }} {
    font-size: {{ block.settings.quote_size }}px;
    color: {{ block.settings.text_color }};
    line-height: 1.5;
    margin: 0 0 24px;font-style: italic;
    position: relative;
  }

  .ai-testimonial-quote-{{ ai_gen_id }}::before {
    content: '"';
    font-size: 60px;
    color: {{ block.settings.quote_mark_color }};
    position: absolute;
    top: -20px;
    left: -20px;
    font-family: serif;
    line-height: 1;
  }

  .ai-testimonial-quote-{{ ai_gen_id }}::after {
    content: '"';
    font-size: 60px;
    color: {{ block.settings.quote_mark_color }};
    position: absolute;
    bottom: -40px;
    right: -20px;
    font-family: serif;
    line-height: 1;
  }

  .ai-testimonial-customer-{{ ai_gen_id }} {
    font-size: {{ block.settings.customer_name_size }}px;
    color: {{ block.settings.customer_name_color }};
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin: 0;}

  @media screen and (max-width: 768px) {
    .ai-testimonials-grid-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: 30px;
    }

    .ai-testimonial-card-{{ ai_gen_id }} {
      padding: 30px 20px;
    }

    .ai-testimonials-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.8 }}px;
    }

    .ai-testimonial-quote-{{ ai_gen_id }} {
      font-size: {{ block.settings.quote_size | times: 0.9 }}px;
    }

    .ai-testimonial-image-{{ ai_gen_id }} {
      height: 200px;
      margin-bottom: 20px;
    }
  }
{% endstyle %}

<div class="ai-testimonials-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-testimonials-container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank or block.settings.subheading != blank %}
      <div class="ai-testimonials-header-{{ ai_gen_id }}">
        {% if block.settings.heading != blank %}
          <h2 class="ai-testimonials-title-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
        {% endif %}
        {% if block.settings.subheading != blank %}
          <div class="ai-testimonials-subtitle-{{ ai_gen_id }}">{{ block.settings.subheading }}</div>
        {% endif %}
      </div>
    {% endif %}

    <div class="ai-testimonials-grid-{{ ai_gen_id }}">
      {% for i in (1..3) %}
        {% liquid
          assign testimonial_enabled_key = 'testimonial_' | append: i | append: '_enabled'
          assign testimonial_image_key = 'testimonial_' | append: i | append: '_image'
          assign testimonial_rating_key = 'testimonial_' | append: i | append: '_rating'
          assign testimonial_quote_key = 'testimonial_' | append: i | append: '_quote'
          assign testimonial_customer_key = 'testimonial_' | append: i | append: '_customer'

          assign testimonial_enabled = block.settings[testimonial_enabled_key]
          assign testimonial_image = block.settings[testimonial_image_key]
          assign testimonial_rating = block.settings[testimonial_rating_key]
          assign testimonial_quote = block.settings[testimonial_quote_key]
          assign testimonial_customer = block.settings[testimonial_customer_key]
        %}

        {% if testimonial_enabled %}
          <div class="ai-testimonial-card-{{ ai_gen_id }}">
            {% if testimonial_image != blank %}
              <div class="ai-testimonial-image-{{ ai_gen_id }}">
                <img
                  src="{{ testimonial_image | image_url: width: 400 }}"
                  alt="{{ testimonial_image.alt | escape }}"
                  loading="lazy"
                  width="400"
                  height="250"
                >
              </div>
            {% else %}
              <div class="ai-testimonial-image-{{ ai_gen_id }}">
                <div class="ai-testimonial-image-placeholder-{{ ai_gen_id }}">
                  {{ 'image' | placeholder_svg_tag }}
                </div>
              </div>
            {% endif %}

            <div class="ai-testimonial-stars-{{ ai_gen_id }}">
              {% for star in (1..5) %}
                {% if star <= testimonial_rating %}
                  <svg class="ai-testimonial-star-{{ ai_gen_id }}" viewBox="0 0 24 24">
                    <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                  </svg>
                {% else %}
                  <svg class="ai-testimonial-star-{{ ai_gen_id }} ai-testimonial-star-empty-{{ ai_gen_id }}" viewBox="0 0 24 24">
                    <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                  </svg>
                {% endif %}
              {% endfor %}
            </div>

            {% if testimonial_quote != blank %}
              <blockquote class="ai-testimonial-quote-{{ ai_gen_id }}">
                {{ testimonial_quote }}
              </blockquote>
            {% endif %}

            {% if testimonial_customer != blank %}
              <cite class="ai-testimonial-customer-{{ ai_gen_id }}">
                {{ testimonial_customer }}
              </cite>
            {% endif %}
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

