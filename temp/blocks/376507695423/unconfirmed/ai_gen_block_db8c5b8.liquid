              <path d="M25.8 18.7l-.9-2.1h-3.7l-.9 2.1h-1.5l3.5-7.9h1.5l3.5 7.9h-1.5zm-2.2-5.4l-1.2 2.7h2.4l-1.2-2.7z"/>
            </svg>
          </div>
          <div class="ai-footer-payment-icon-{{ ai_gen_id }}">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 38 24" fill="#FF5F00">
              <path d="M35 0H3C1.3 0 0 1.3 0 3v18c0 1.7 1.4 3 3 3h32c1.7 0 3-1.3 3-3V3c0-1.7-1.4-3-3-3z"/>
              <circle cx="15" cy="12" r="7" fill="#FF5F00"/>
              <circle cx="23" cy="12" r="7" fill="#EB001B"/>
