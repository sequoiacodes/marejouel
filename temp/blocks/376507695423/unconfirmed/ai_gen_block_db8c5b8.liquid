{% doc %}
  @prompt
    Create a comprehensive footer section with multiple columns including: company description with social media icons, quick links navigation, collections/product categories, privacy and security links, and a newsletter signup form with email input and subscribe button. Include payment method icons and copyright text at the bottom. Style it with a dark background and organized column layout.

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-footer-{{ ai_gen_id }} {
    background-color: {{ block.settings.background_color }};
    color: {{ block.settings.text_color }};
    padding: {{ block.settings.padding_top }}px 0 {{ block.settings.padding_bottom }}px;
  }

  .ai-footer-container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-footer-main-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 40px;
    margin-bottom: 40px;
  }

  .ai-footer-column-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  .ai-footer-column-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    font-weight: 600;
    color: {{ block.settings.heading_color }};
    margin: 0 0 8px;text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .ai-footer-description-{{ ai_gen_id }} {
    font-size: {{ block.settings.text_size }}px;
    line-height: 1.6;
    margin-bottom: 20px;
  }

  .ai-footer-social-{{ ai_gen_id }} {
    display: flex;
    gap: 12px;
    flex-wrap: wrap;
  }

  .ai-footer-social-link-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    justify-content: center;
    width: {{ block.settings.social_icon_size }}px;
    height: {{ block.settings.social_icon_size }}px;
    background-color: {{ block.settings.social_bg_color }};
    color: {{ block.settings.social_icon_color }};
    border-radius: 50%;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .ai-footer-social-link-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.social_hover_bg_color }};
    color: {{ block.settings.social_hover_icon_color }};
    transform: translateY(-2px);
  }

  .ai-footer-social-link-{{ ai_gen_id }} svg {
    width: calc({{ block.settings.social_icon_size }}px * 0.5);
    height: calc({{ block.settings.social_icon_size }}px * 0.5);
  }

  .ai-footer-links-{{ ai_gen_id }} {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .ai-footer-link-{{ ai_gen_id }} {
    color: {{ block.settings.link_color }};
    text-decoration: none;
    font-size: {{ block.settings.text_size }}px;
    transition: color 0.3s ease;
  }

  .ai-footer-link-{{ ai_gen_id }}:hover {
    color: {{ block.settings.link_hover_color }};
  }

  .ai-footer-newsletter-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  .ai-footer-newsletter-form-{{ ai_gen_id }} {
    display: flex;
    gap: 8px;
    flex-wrap: wrap;
  }

  .ai-footer-newsletter-input-{{ ai_gen_id }} {
    flex: 1;
    min-width: 200px;
    padding: 12px 16px;
    border: 1px solid {{ block.settings.input_border_color }};
    border-radius: {{ block.settings.input_border_radius }}px;
    background-color: {{ block.settings.input_bg_color }};
    color: {{ block.settings.input_text_color }};
    font-size: {{ block.settings.text_size }}px;
  }

  .ai-footer-newsletter-input-{{ ai_gen_id }}::placeholder {
    color: {{ block.settings.input_placeholder_color }};
  }

  .ai-footer-newsletter-button-{{ ai_gen_id }} {
    padding: 12px 24px;
    background-color: {{ block.settings.button_bg_color }};
    color: {{ block.settings.button_text_color }};
    border: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.text_size }}px;
    font-weight: 600;
    cursor: pointer;
    transition: background-color 0.3s ease;
    white-space: nowrap;
  }

  .ai-footer-newsletter-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_bg_color }};
  }

  .ai-footer-newsletter-success-{{ ai_gen_id }} {
    color: {{ block.settings.success_color }};
    font-size: 14px;
    margin-top: 8px;
  }

  .ai-footer-newsletter-error-{{ ai_gen_id }} {
    color: {{ block.settings.error_color }};
    font-size: 14px;
    margin-top: 8px;
  }

  .ai-footer-bottom-{{ ai_gen_id }} {
    border-top: 1px solid {{ block.settings.border_color }};
    padding-top: 30px;
    display: flex;
    flex-direction: column;
    gap: 20px;
    align-items: center;text-align: center;
  }

  .ai-footer-payment-{{ ai_gen_id }} {
    display: flex;
    gap: 12px;
    flex-wrap: wrap;
    justify-content: center;align-items: center;
  }

  .ai-footer-payment-icon-{{ ai_gen_id }} {
    width: {{ block.settings.payment_icon_size }}px;
    height: auto;
    background-color: {{ block.settings.payment_bg_color }};
    padding: 8px;
    border-radius: 4px;
    display: flex;
    align-items: center;
    justify-content: center;}

  .ai-footer-payment-icon-{{ ai_gen_id }} svg {
    width: 100%;
    height: auto;
    max-height: 24px;
  }

  .ai-footer-copyright-{{ ai_gen_id }} {
    font-size: {{ block.settings.copyright_size }}px;
    color: {{ block.settings.copyright_color }};
    text-align: center;}

  @media screen and (max-width: 768px) {
    .ai-footer-main-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: 30px;
    }

    .ai-footer-newsletter-form-{{ ai_gen_id }} {
      flex-direction: column;
    }

    .ai-footer-newsletter-input-{{ ai_gen_id }} {
      min-width: auto;
    }

    .ai-footer-bottom-{{ ai_gen_id }} {
      flex-direction: column;
      text-align: center;
    }

    .ai-footer-payment-{{ ai_gen_id }} {
      justify-content: center;
    }
  }
{% endstyle %}

<footer class="ai-footer-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-footer-container-{{ ai_gen_id }}">
    <div class="ai-footer-main-{{ ai_gen_id }}">
      <div class="ai-footer-column-{{ ai_gen_id }}">
        {% if block.settings.company_title != blank %}
          <h3 class="ai-footer-column-title-{{ ai_gen_id }}">{{ block.settings.company_title }}</h3>
        {% endif %}
        
        {% if block.settings.company_description != blank %}
          <div class="ai-footer-description-{{ ai_gen_id }}">
            {{ block.settings.company_description }}
          </div>
        {% endif %}

        {% if block.settings.show_social %}
          <div class="ai-footer-social-{{ ai_gen_id }}">
            {% if block.settings.facebook_url != blank %}
              <a href="{{ block.settings.facebook_url }}" class="ai-footer-social-link-{{ ai_gen_id }}" target="_blank" rel="noopener" aria-label="Facebook">
