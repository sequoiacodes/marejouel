{% doc %}
  @prompt
    Create a customizable product grid section that displays 4 products by default in a grid layout. Include a centered button at the bottom with hover effects. The section should have image hover effects that change the product image on hover (similar to existing product page functionality). Add customizable fields below each product including title, price, and description. Make all elements fully customizable through theme settings including grid layout, button styling, text formatting, colors, and spacing. Ensure the design matches a clean, modern swimwear product layout with proper responsive behavior.

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-product-grid-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding_top }}px 0 {{ block.settings.section_padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-product-grid-container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 {{ block.settings.container_padding }}px;
  }

  .ai-product-grid-header-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: {{ block.settings.header_spacing }}px;
  }

  .ai-product-grid-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    color: {{ block.settings.title_color }};
    margin: 0 0 {{ block.settings.title_margin }}px;
    font-weight: {{ block.settings.title_weight }};
    text-transform: {{ block.settings.title_transform }};
  }

  .ai-product-grid-subtitle-{{ ai_gen_id }} {
    font-size: {{ block.settings.subtitle_size }}px;
    color: {{ block.settings.subtitle_color }};
    margin: 0;
  }

  .ai-product-grid-items-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.columns_desktop }}, 1fr);
    gap: {{ block.settings.grid_gap }}px;
    margin-bottom: {{ block.settings.button_spacing }}px;
  }

  .ai-product-card-{{ ai_gen_id }} {
    background-color: {{ block.settings.card_background }};
    border-radius: {{ block.settings.card_border_radius }}px;
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .ai-product-card-{{ ai_gen_id }}:hover {
    transform: translateY({{ block.settings.card_hover_lift }}px);
    box-shadow: 0 {{ block.settings.card_shadow_blur }}px {{ block.settings.card_shadow_spread }}px rgba(0, 0, 0, {{ block.settings.card_shadow_opacity }});
  }

  .ai-product-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    aspect-ratio: {{ block.settings.image_aspect_ratio }};
    overflow: hidden;
  }

  .ai-product-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: opacity 0.3s ease;
  }

  .ai-product-image-hover-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .ai-product-card-{{ ai_gen_id }}:hover .ai-product-image-hover-{{ ai_gen_id }} {
    opacity: 1;
  }

  .ai-product-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-product-image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-product-content-{{ ai_gen_id }} {
    padding: {{ block.settings.card_padding }}px;}

  .ai-product-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.product_title_size }}px;
    color: {{ block.settings.product_title_color }};
    margin: 0 0 {{ block.settings.product_title_margin }}px;
    font-weight: {{ block.settings.product_title_weight }};
    text-transform: {{ block.settings.product_title_transform }};
    line-height: 1.3;
  }

  .ai-product-price-{{ ai_gen_id }} {
    font-size: {{ block.settings.product_price_size }}px;
    color: {{ block.settings.product_price_color }};
    margin: 0 0 {{ block.settings.product_price_margin }}px;
    font-weight: {{ block.settings.product_price_weight }};
  }

  .ai-product-description-{{ ai_gen_id }} {
    font-size: {{ block.settings.product_description_size }}px;
    color: {{ block.settings.product_description_color }};
    line-height: 1.5;
    margin: 0;
  }

  .ai-product-grid-button-wrapper-{{ ai_gen_id }} {
    text-align: center;
  }

  .ai-product-grid-button-{{ ai_gen_id }} {
    display: inline-block;
    padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
    background-color: {{ block.settings.button_background }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_font_size }}px;
    font-weight: {{ block.settings.button_font_weight }};
    text-transform: {{ block.settings.button_text_transform }};
    transition: all 0.3s ease;
    border: {{ block.settings.button_border_width }}px solid {{ block.settings.button_border_color }};
  }

  .ai-product-grid-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_background }};
    color: {{ block.settings.button_hover_text_color }};
    border-color: {{ block.settings.button_hover_border_color }};
    transform: translateY(-2px);
  }

  @media screen and (max-width: 768px) {
    .ai-product-grid-items-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_mobile }}, 1fr);
      gap: {{ block.settings.grid_gap_mobile }}px;
    }

    .ai-product-grid-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size | times: 0.8 }}px;
    }

    .ai-product-content-{{ ai_gen_id }} {
      padding: {{ block.settings.card_padding | times: 0.8 }}px;
    }

    .ai-product-grid-container-{{ ai_gen_id }} {
      padding: 0 {{ block.settings.container_padding | times: 0.8 }}px;
    }
  }

  @media screen and (max-width: 480px) {
    .ai-product-grid-items-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
    }
  }
{% endstyle %}

<div class="ai-product-grid-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-product-grid-container-{{ ai_gen_id }}">
    {% if block.settings.section_title != blank or block.settings.section_subtitle != blank %}
      <div class="ai-product-grid-header-{{ ai_gen_id }}">
        {% if block.settings.section_title != blank %}
          <h2 class="ai-product-grid-title-{{ ai_gen_id }}">{{ block.settings.section_title }}</h2>
        {% endif %}
        {% if block.settings.section_subtitle != blank %}
          <p class="ai-product-grid-subtitle-{{ ai_gen_id }}">{{ block.settings.section_subtitle }}</p>
        {% endif %}
      </div>
    {% endif %}

    <div class="ai-product-grid-items-{{ ai_gen_id }}">
      {% for i in (1..4) %}
        {% liquid
          assign product_key = 'product_' | append: i
          assign product = block.settings[product_key]
        %}
        
        <div class="ai-product-card-{{ ai_gen_id }}">
          <div class="ai-product-image-wrapper-{{ ai_gen_id }}">
            {% if product != blank %}
              {% if product.featured_image %}
                <img
                  src="{{ product.featured_image | image_url: width: 600 }}"
                  alt="{{ product.featured_image.alt | escape }}"
                  class="ai-product-image-{{ ai_gen_id }}"
                  loading="lazy"
                  width="600"
                  height="600"
                >
                {% if product.images[1] %}
                  <img
                    src="{{ product.images[1] | image_url: width: 600 }}"
                    alt="{{ product.images[1].alt | escape }}"
                    class="ai-product-image-hover-{{ ai_gen_id }}"
                    loading="lazy"
                    width="600"
                    height="600"
                  >
                {% endif %}
              {% else %}
                <div class="ai-product-image-placeholder-{{ ai_gen_id }}">
                  {{ 'product-apparel-1' | placeholder_svg_tag }}
                </div>
              {% endif %}
            {% else %}
              <div class="ai-product-image-placeholder-{{ ai_gen_id }}">
                {{ 'product-apparel-1' | placeholder_svg_tag }}
              </div>
            {% endif %}
          </div>

          <div class="ai-product-content-{{ ai_gen_id }}">
            {% if product != blank %}
              <h3 class="ai-product-title-{{ ai_gen_id }}">
                <a href="{{ product.url }}" style="color: inherit; text-decoration: none;">
                  {{ product.title }}
                </a>
              </h3>
              <div class="ai-product-price-{{ ai_gen_id }}">
                {% if product.compare_at_price > product.price %}
                  <span style="text-decoration: line-through; opacity: 0.6;">{{ product.compare_at_price | money }}</span>
                  <span>{{ product.price | money }}</span>
                {% else %}
                  {{ product.price | money }}
                {% endif %}
              </div>
              {% if product.description != blank %}
                <div class="ai-product-description-{{ ai_gen_id }}">
                  {{ product.description | strip_html | truncate: 100 }}
                </div>
              {% endif %}
            {% else %}
              <h3 class="ai-product-title-{{ ai_gen_id }}">Sample Product Title</h3>
              <div class="ai-product-price-{{ ai_gen_id }}">$29.99</div>
              <div class="ai-product-description-{{ ai_gen_id }}">
                This is a sample product description that showcases how your product details will appear.
              </div>
            {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>

    {% if block.settings.button_text != blank %}
      <div class="ai-product-grid-button-wrapper-{{ ai_gen_id }}">
        <a href="{{ block.settings.button_link }}" class="ai-product-grid-button-{{ ai_gen_id }}">
          {{ block.settings.button_text }}
        </a>
      </div>
    {% endif %}
  </div>
</div>

