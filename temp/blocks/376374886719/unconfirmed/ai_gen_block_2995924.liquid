    }

    .ai-new-arrivals-product-price-{{ ai_gen_id }} {
      font-size: {{ section.settings.product_price_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<div class="ai-new-arrivals-{{ ai_gen_id }}" {{ section.shopify_attributes }}>
  <div class="ai-new-arrivals-container-{{ ai_gen_id }}">
    {% if section.settings.title != blank or section.settings.subtitle != blank %}
      <div class="ai-new-arrivals-header-{{ ai_gen_id }}">
        {% if section.settings.title != blank %}
          <h2 class="ai-new-arrivals-title-{{ ai_gen_id }}">{{ section.settings.title }}</h2>
        {% endif %}
        {% if section.settings.subtitle != blank %}
          <div class="ai-new-arrivals-subtitle-{{ ai_gen_id }}">{{ section.settings.subtitle }}</div>
        {% endif %}
      </div>
    {% endif %}

    {% if section.settings.collection != blank %}
      <div class="ai-new-arrivals-grid-{{ ai_gen_id }}">
        {% for product in section.settings.collection.products limit: section.settings.products_to_show %}
          <div class="ai-new-arrivals-product-{{ ai_gen_id }}">
            <div class="ai-new-arrivals-product-image-wrapper-{{ ai_gen_id }}">
              {% if product.featured_image %}
                <img
                  src="{{ product.featured_image | image_url: width: 600 }}"
                  alt="{{ product.featured_image.alt | escape }}"
                  class="ai-new-arrivals-product-image-{{ ai_gen_id }}"
                  loading="lazy"
                  width="{{ product.featured_image.width }}"
                  height="{{ product.featured_image.height }}"
                >
                {% if product.images[1] and section.settings.enable_hover_image %}
                  <img
                    src="{{ product.images[1] | image_url: width: 600 }}"
                    alt="{{ product.images[1].alt | escape }}"
                    class="ai-new-arrivals-product-image-secondary-{{ ai_gen_id }}"
                    loading="lazy"
                    width="{{ product.images[1].width }}"
                    height="{{ product.images[1].height }}"
                  >
                {% endif %}
              {% else %}
                <div class="ai-new-arrivals-product-placeholder-{{ ai_gen_id }}">
                  {{ 'product-1' | placeholder_svg_tag }}
                </div>
              {% endif %}
            </div>

            <div class="ai-new-arrivals-product-info-{{ ai_gen_id }}">
              {% if section.settings.show_vendor and product.vendor != blank %}
                <div class="ai-new-arrivals-product-vendor-{{ ai_gen_id }}">{{ product.vendor }}</div>
              {% endif %}

              <h3 class="ai-new-arrivals-product-title-{{ ai_gen_id }}">
                <a href="{{ product.url }}">{{ product.title }}</a>
              </h3>

              {% if section.settings.show_price %}
                <div class="ai-new-arrivals-product-price-{{ ai_gen_id }}">
                  {% if product.compare_at_price > product.price %}
                    <span class="ai-new-arrivals-product-price-compare-{{ ai_gen_id }}">
                      {{ product.compare_at_price | money }}
                    </span>
                  {% endif %}
                  {{ product.price | money }}
                </div>
              {% endif %}
            </div>
          </div>
        {% endfor %}
      </div>

      {% if section.settings.show_view_all_button and section.settings.collection != blank %}
        <div class="ai-new-arrivals-view-all-wrapper-{{ ai_gen_id }}">
          <a href="{{ section.settings.collection.url }}" class="ai-new-arrivals-view-all-{{ ai_gen_id }}">
            {{ section.settings.view_all_text }}
          </a>
        </div>
      {% endif %}
    {% else %}
      <div class="ai-new-arrivals-grid-{{ ai_gen_id }}">
        {% for i in (1..section.settings.products_to_show) %}
          <div class="ai-new-arrivals-product-{{ ai_gen_id }}">
            <div class="ai-new-arrivals-product-image-wrapper-{{ ai_gen_id }}">
              <div class="ai-new-arrivals-product-placeholder-{{ ai_gen_id }}">
                {{ 'product-1' | placeholder_svg_tag }}
              </div>
            </div>
            <div class="ai-new-arrivals-product-info-{{ ai_gen_id }}">
              {% if section.settings.show_vendor %}
                <div class="ai-new-arrivals-product-vendor-{{ ai_gen_id }}">Brand Name</div>
              {% endif %}
              <h3 class="ai-new-arrivals-product-title-{{ ai_gen_id }}">
                <a href="#">Product Title</a>
              </h3>
              {% if section.settings.show_price %}
                <div class="ai-new-arrivals-product-price-{{ ai_gen_id }}">$29.99</div>
              {% endif %}
            </div>
          </div>
        {% endfor %}
      </div>
    {% endif %}
  </div>
</div>

