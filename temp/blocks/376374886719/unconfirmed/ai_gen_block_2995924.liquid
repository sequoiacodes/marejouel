{% doc %}
  @prompt
    Create a "New Arrivals" product showcase section for the home page that displays products from a specific collection. Include the same hover effects as the existing product pages where product images change on hover. Design should match the clean swimwear aesthetic with product titles, prices, and a grid layout. Add a collection picker setting so merchants can choose which collection to display. Include customizable section title, grid columns, and styling options. Make it fully responsive and include a "View All" button that links to the full collection page.

{% enddoc %}
{% assign ai_gen_id = section.id | replace: '_', '' | downcase %}

{% style %}
  .ai-new-arrivals-{{ ai_gen_id }} {
    padding: {{ section.settings.section_padding_top }}px 0 {{ section.settings.section_padding_bottom }}px;
    background-color: {{ section.settings.background_color }};
  }

  .ai-new-arrivals-container-{{ ai_gen_id }} {
    max-width: {{ settings.container }}px;
    margin: 0 auto;
    padding: 0 {{ settings.gutter }}px;
  }

  .ai-new-arrivals-header-{{ ai_gen_id }} {
    text-align: {{ section.settings.text_alignment }};
    margin-bottom: {{ section.settings.header_spacing }}px;
  }

  .ai-new-arrivals-title-{{ ai_gen_id }} {
    color: {{ section.settings.title_color }};
    font-size: {{ section.settings.title_size }}px;
    margin: 0 0 {{ section.settings.title_spacing }}px;
    text-transform: {{ section.settings.title_transform }};
    letter-spacing: {{ section.settings.title_letter_spacing }}em;
  }

  .ai-new-arrivals-subtitle-{{ ai_gen_id }} {
    color: {{ section.settings.subtitle_color }};
    font-size: {{ section.settings.subtitle_size }}px;
    margin: 0;
  }

  .ai-new-arrivals-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ section.settings.columns_desktop }}, 1fr);
    gap: {{ section.settings.grid_gap }}px;
    margin-bottom: {{ section.settings.grid_bottom_spacing }}px;
  }

  .ai-new-arrivals-product-{{ ai_gen_id }} {
    position: relative;
    text-align: {{ section.settings.product_text_alignment }};
  }

  .ai-new-arrivals-product-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    overflow: hidden;
    background-color: #f8f8f8;
    border-radius: {{ section.settings.image_border_radius }}px;
    margin-bottom: {{ section.settings.image_spacing }}px;
    aspect-ratio: {{ section.settings.image_aspect_ratio }};
  }

  .ai-new-arrivals-product-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: opacity 0.3s ease;
  }

  .ai-new-arrivals-product-image-secondary-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .ai-new-arrivals-product-{{ ai_gen_id }}:hover .ai-new-arrivals-product-image-secondary-{{ ai_gen_id }} {
    opacity: 1;
  }

  .ai-new-arrivals-product-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f8f8f8;
  }

  .ai-new-arrivals-product-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-new-arrivals-product-info-{{ ai_gen_id }} {
    padding: 0;
  }

  .ai-new-arrivals-product-title-{{ ai_gen_id }} {
    color: {{ section.settings.product_title_color }};
    font-size: {{ section.settings.product_title_size }}px;
    margin: 0 0 {{ section.settings.product_title_spacing }}px;
    text-transform: {{ section.settings.product_title_transform }};
    letter-spacing: {{ section.settings.product_title_letter_spacing }}em;
    line-height: 1.3;
  }

  .ai-new-arrivals-product-title-{{ ai_gen_id }} a {
    color: inherit;
    text-decoration: none;
  }

  .ai-new-arrivals-product-title-{{ ai_gen_id }} a:hover {
    color: {{ section.settings.product_title_hover_color }};
  }

  .ai-new-arrivals-product-vendor-{{ ai_gen_id }} {
    color: {{ section.settings.product_vendor_color }};
    font-size: {{ section.settings.product_vendor_size }}px;
    margin: 0 0 {{ section.settings.product_vendor_spacing }}px;
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  .ai-new-arrivals-product-price-{{ ai_gen_id }} {
    color: {{ section.settings.product_price_color }};
    font-size: {{ section.settings.product_price_size }}px;
    font-weight: 500;
    margin: 0;
  }

  .ai-new-arrivals-product-price-compare-{{ ai_gen_id }} {
    color: {{ section.settings.product_compare_price_color }};
    text-decoration: line-through;
    margin-right: 8px;
    opacity: 0.7;
  }

  .ai-new-arrivals-view-all-wrapper-{{ ai_gen_id }} {
    text-align: {{ section.settings.button_alignment }};
  }

  .ai-new-arrivals-view-all-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: {{ section.settings.button_padding_vertical }}px {{ section.settings.button_padding_horizontal }}px;
    background-color: {{ section.settings.button_background_color }};
    color: {{ section.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ section.settings.button_border_radius }}px;
    font-size: {{ section.settings.button_font_size }}px;
    text-transform: {{ section.settings.button_text_transform }};
    letter-spacing: {{ section.settings.button_letter_spacing }}em;
    transition: all 0.3s ease;
    border: {{ section.settings.button_border_width }}px solid {{ section.settings.button_border_color }};
  }

  .ai-new-arrivals-view-all-{{ ai_gen_id }}:hover {
    background-color: {{ section.settings.button_hover_background_color }};
    color: {{ section.settings.button_hover_text_color }};
    border-color: {{ section.settings.button_hover_border_color }};
  }

  @media screen and (max-width: 989px) {
    .ai-new-arrivals-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ section.settings.columns_tablet }}, 1fr);
    }

    .ai-new-arrivals-title-{{ ai_gen_id }} {
      font-size: {{ section.settings.title_size | times: 0.8 }}px;
    }
  }

  @media screen and (max-width: 749px) {
    .ai-new-arrivals-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ section.settings.columns_mobile }}, 1fr);
    }

    .ai-new-arrivals-{{ ai_gen_id }} {
      padding: {{ section.settings.section_padding_top | times: 0.7 }}px 0 {{ section.settings.section_padding_bottom | times: 0.7 }}px;
    }

