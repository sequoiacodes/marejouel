{% doc %}
  @prompt
    Create a testimonials section with customer photos and text testimonials. The section should display customer testimonials in a clean, modern layout with circular customer profile photos alongside their testimonial text and names. Include customizable options for adding multiple testimonials, adjusting layout spacing, and styling the text and images., only one textmonials and another in another page which is swipe self and image section also make and the add background image section in the main div

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-testimonials-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding_top }}px 0 {{ block.settings.section_padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
    {% if block.settings.background_image %}
      background-image: url('{{ block.settings.background_image | image_url: width: 2000 }}');
      background-size: cover;
      background-position: center;
      background-repeat: no-repeat;
    {% endif %}
    position: relative;
  }

  .ai-testimonials-overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, {{ block.settings.overlay_opacity | divided_by: 100.0 }});
    z-index: 1;
  }

  .ai-testimonials-container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
    position: relative;
    z-index: 2;
  }

  .ai-testimonials-header-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: {{ block.settings.header_spacing }}px;
  }

  .ai-testimonials-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    color: {{ block.settings.title_color }};
    margin: 0 0 16px;
    font-weight: 600;
  }

  .ai-testimonials-subtitle-{{ ai_gen_id }} {
    font-size: {{ block.settings.subtitle_size }}px;
    color: {{ block.settings.subtitle_color }};
    margin: 0;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .ai-testimonials-slider-{{ ai_gen_id }} {
    position: relative;
    overflow: hidden;
    border-radius: {{ block.settings.slider_border_radius }}px;
    margin-top: {{ block.settings.grid_spacing }}px;
  }

  .ai-testimonials-track-{{ ai_gen_id }} {
    display: flex;
    transition: transform 0.5s ease;
    width: calc(100% * {{ block.settings.testimonial_count }});
  }

  .ai-testimonial-slide-{{ ai_gen_id }} {
    width: calc(100% / {{ block.settings.testimonial_count }});
    flex-shrink: 0;
    padding: 0 {{ block.settings.testimonial_spacing | divided_by: 2 }}px;
  }

  .ai-testimonial-card-{{ ai_gen_id }} {
    background-color: {{ block.settings.card_background_color }};
    border-radius: {{ block.settings.card_border_radius }}px;
    padding: {{ block.settings.card_padding }}px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    text-align: {{ block.settings.text_alignment }};
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }

  .ai-testimonial-content-{{ ai_gen_id }} {
    margin-bottom: {{ block.settings.content_spacing }}px;
    flex-grow: 1;
  }

  .ai-testimonial-text-{{ ai_gen_id }} {
    font-size: {{ block.settings.text_size }}px;
    color: {{ block.settings.text_color }};
    line-height: 1.6;
    margin: 0;
    font-style: italic;
  }

  .ai-testimonial-author-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: 16px;
    {% if block.settings.text_alignment == 'center' %}
      justify-content: center;
    {% elsif block.settings.text_alignment == 'right' %}
      justify-content: flex-end;
    {% endif %}
  }

  .ai-testimonial-photo-{{ ai_gen_id }} {
    width: {{ block.settings.photo_size }}px;
    height: {{ block.settings.photo_size }}px;
    border-radius: 50%;
    overflow: hidden;
    flex-shrink: 0;
    background-color: #f4f4f4;
  }

  .ai-testimonial-photo-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-testimonial-photo-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f4f4f4;
  }

  .ai-testimonial-photo-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-testimonial-info-{{ ai_gen_id }} {
    flex-grow: 1;
  }

  .ai-testimonial-name-{{ ai_gen_id }} {
    font-size: {{ block.settings.name_size }}px;
    color: {{ block.settings.name_color }};
    font-weight: 600;
    margin: 0 0 4px;
  }

  .ai-testimonial-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.job_title_size }}px;
    color: {{ block.settings.job_title_color }};
    margin: 0;
    opacity: 0.8;
  }

  .ai-testimonial-rating-{{ ai_gen_id }} {
    display: flex;
    gap: 2px;
    margin-bottom: {{ block.settings.rating_spacing }}px;
    {% if block.settings.text_alignment == 'center' %}
      justify-content: center;
    {% elsif block.settings.text_alignment == 'right' %}
      justify-content: flex-end;
    {% endif %}
  }

  .ai-testimonial-star-{{ ai_gen_id }} {
    width: {{ block.settings.star_size }}px;
    height: {{ block.settings.star_size }}px;
    color: {{ block.settings.star_color }};
  }

  .ai-testimonials-navigation-{{ ai_gen_id }} {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 20px;
    margin-top: 30px;
  }

  .ai-testimonials-nav-btn-{{ ai_gen_id }} {
    background-color: {{ block.settings.nav_button_color }};
    color: {{ block.settings.nav_button_text_color }};
    border: none;
    border-radius: 50%;
    width: 50px;
    height: 50px;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.3s ease;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }

  .ai-testimonials-nav-btn-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.nav_button_hover_color }};
    transform: scale(1.1);
  }

  .ai-testimonials-nav-btn-{{ ai_gen_id }}:disabled {
    opacity: 0.5;
    cursor: not-allowed;
    transform: none;
  }

  .ai-testimonials-dots-{{ ai_gen_id }} {
    display: flex;
    gap: 8px;
  }

  .ai-testimonials-dot-{{ ai_gen_id }} {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background-color: rgba(255, 255, 255, 0.5);
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .ai-testimonials-dot-{{ ai_gen_id }}.active {
    background-color: {{ block.settings.nav_button_color }};
    transform: scale(1.2);
  }

  .ai-testimonials-autoplay-{{ ai_gen_id }} {
    position: absolute;
    top: 20px;
    right: 20px;
    background-color: rgba(255, 255, 255, 0.9);
    border: none;
    border-radius: 20px;
    padding: 8px 16px;
    cursor: pointer;
    font-size: 14px;
    transition: all 0.3s ease;
  }

  .ai-testimonials-autoplay-{{ ai_gen_id }}:hover {
    background-color: rgba(255, 255, 255, 1);
  }

  @media screen and (max-width: 768px) {
    .ai-testimonial-slide-{{ ai_gen_id }} {
      padding: 0 10px;
    }

    .ai-testimonials-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size | times: 0.8 }}px;
    }

    .ai-testimonial-card-{{ ai_gen_id }} {
      padding: {{ block.settings.card_padding | times: 0.8 }}px;
    }

    .ai-testimonial-author-{{ ai_gen_id }} {
      flex-direction: column;
      text-align: center;
      gap: 12px;
    }

    .ai-testimonial-info-{{ ai_gen_id }} {
      text-align: center;
    }

    .ai-testimonials-nav-btn-{{ ai_gen_id }} {
      width: 40px;
      height: 40px;
    }
  }
{% endstyle %}

<testimonials-slider-{{ ai_gen_id }}
  class="ai-testimonials-{{ ai_gen_id }}"
  data-autoplay="{{ block.settings.autoplay }}"
  data-autoplay-speed="{{ block.settings.autoplay_speed }}"
  {{ block.shopify_attributes }}
>
  {% if block.settings.background_image and block.settings.overlay_opacity > 0 %}
    <div class="ai-testimonials-overlay-{{ ai_gen_id }}"></div>
  {% endif %}

  <div class="ai-testimonials-container-{{ ai_gen_id }}">
    {% if block.settings.title != blank or block.settings.subtitle != blank %}
      <div class="ai-testimonials-header-{{ ai_gen_id }}">
        {% if block.settings.title != blank %}
          <h2 class="ai-testimonials-title-{{ ai_gen_id }}">{{ block.settings.title }}</h2>
        {% endif %}
        {% if block.settings.subtitle != blank %}
          <div class="ai-testimonials-subtitle-{{ ai_gen_id }}">{{ block.settings.subtitle }}</div>
        {% endif %}
      </div>
    {% endif %}

    <div class="ai-testimonials-slider-{{ ai_gen_id }}">
      {% if block.settings.autoplay %}
        <button class="ai-testimonials-autoplay-{{ ai_gen_id }}" data-autoplay-toggle>
          <span data-play-text>⏸ Pause</span>
          <span data-pause-text style="display: none;">▶ Play</span>
        </button>
      {% endif %}

      <div class="ai-testimonials-track-{{ ai_gen_id }}" data-track>
        {% liquid
          assign testimonial_count = 0
          for i in (1..6)
            assign testimonial_enabled_key = 'testimonial_' | append: i | append: '_enabled'
            assign testimonial_enabled = block.settings[testimonial_enabled_key]
            if testimonial_enabled
              assign testimonial_count = testimonial_count | plus: 1
            endif
          endfor
        %}

        {% for i in (1..6) %}
          {% liquid
            assign testimonial_enabled_key = 'testimonial_' | append: i | append: '_enabled'
            assign testimonial_text_key = 'testimonial_' | append: i | append: '_text'
            assign testimonial_name_key = 'testimonial_' | append: i | append: '_name'
            assign testimonial_title_key = 'testimonial_' | append: i | append: '_title'
            assign testimonial_photo_key = 'testimonial_' | append: i | append: '_photo'
            assign testimonial_rating_key = 'testimonial_' | append: i | append: '_rating'

            assign testimonial_enabled = block.settings[testimonial_enabled_key]
            assign testimonial_text = block.settings[testimonial_text_key]
            assign testimonial_name = block.settings[testimonial_name_key]
            assign testimonial_title = block.settings[testimonial_title_key]
            assign testimonial_photo = block.settings[testimonial_photo_key]
            assign testimonial_rating = block.settings[testimonial_rating_key]
          %}

          {% if testimonial_enabled and testimonial_text != blank %}
            <div class="ai-testimonial-slide-{{ ai_gen_id }}">
              <div class="ai-testimonial-card-{{ ai_gen_id }}">
                {% if block.settings.show_rating and testimonial_rating > 0 %}
                  <div class="ai-testimonial-rating-{{ ai_gen_id }}">
                    {% for star in (1..5) %}<svg class="ai-testimonial-star-{{ ai_gen_id }}" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="{% if star <= testimonial_rating %}currentColor{% else %}none{% endif %}" stroke="currentColor" stroke-width="2">
                        <polygon points="12,2 15.09,8.26 22,9.27 17,14.14 18.18,21.02 12,17.77 5.82,21.02 7,14.14 2,9.27 8.91,8.26"></polygon>
                      </svg>
                    {% endfor %}
                  </div>
                {% endif %}

                <div class="ai-testimonial-content-{{ ai_gen_id }}">
                  <p class="ai-testimonial-text-{{ ai_gen_id }}">"{{ testimonial_text }}"</p></div>

                <div class="ai-testimonial-author-{{ ai_gen_id }}">
                  <div class="ai-testimonial-photo-{{ ai_gen_id }}">
                    {% if testimonial_photo %}
                      <img
                        src="{{ testimonial_photo | image_url: width: 200 }}"
                        alt="{{ testimonial_name | escape }}"
                        loading="lazy"
                        width="200"
                        height="200"
                      >
                    {% else %}
                      <div class="ai-testimonial-photo-placeholder-{{ ai_gen_id }}">
                        {{ 'image' | placeholder_svg_tag }}
                      </div>
                    {% endif %}
                  </div>

                  <div class="ai-testimonial-info-{{ ai_gen_id }}">
                    {% if testimonial_name != blank %}
                      <div class="ai-testimonial-name-{{ ai_gen_id }}">{{ testimonial_name }}</div>
                    {% endif %}
                    {% if testimonial_title != blank %}
                      <div class="ai-testimonial-title-{{ ai_gen_id }}">{{ testimonial_title }}</div>
                    {% endif %}
                  </div>
                </div>
              </div>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>

    <div class="ai-testimonials-navigation-{{ ai_gen_id }}">
      <button class="ai-testimonials-nav-btn-{{ ai_gen_id }}" data-prev>
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <polyline points="15,18 9,12 15,6"></polyline>
        </svg>
      </button>

      <div class="ai-testimonials-dots-{{ ai_gen_id }}" data-dots></div>

      <button class="ai-testimonials-nav-btn-{{ ai_gen_id }}" data-next>
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <polyline points="9,18 15,12 9,6"></polyline>
        </svg>
      </button>
    </div>
  </div>
</testimonials-slider-{{ ai_gen_id }}>

<script>
  (function() {
    class TestimonialsSlider{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.currentSlide = 0;
        this.totalSlides = 0;
        this.autoplayInterval = null;
        this.isAutoplayActive = false;
      }

      connectedCallback() {
        this.track = this.querySelector('[data-track]');
        this.prevBtn = this.querySelector('[data-prev]');
        this.nextBtn = this.querySelector('[data-next]');
        this.dotsContainer = this.querySelector('[data-dots]');
        this.autoplayBtn = this.querySelector('[data-autoplay-toggle]');
        this.slides = this.querySelectorAll('.ai-testimonial-slide-{{ ai_gen_id }}');
        
        this.totalSlides = this.slides.length;
        this.isAutoplayActive = this.dataset.autoplay === 'true';
        this.autoplaySpeed = parseInt(this.dataset.autoplaySpeed) * 1000;

        this.init();
      }

      init() {
        if (this.totalSlides <= 1) {
          this.style.setProperty('--testimonial-count', '1');
          if (this.prevBtn) this.prevBtn.style.display = 'none';
          if (this.nextBtn) this.nextBtn.style.display = 'none';
          if (this.dotsContainer) this.dotsContainer.style.display = 'none';
          if (this.autoplayBtn) this.autoplayBtn.style.display = 'none';
          return;
        }

        this.style.setProperty('--testimonial-count', this.totalSlides);
        this.createDots();
        this.setupEventListeners();
        this.updateSlider();

        if (this.isAutoplayActive) {
          this.startAutoplay();
        }
      }

      createDots() {
        if (!this.dotsContainer) return;
        
        for (let i = 0; i < this.totalSlides; i++) {
          const dot = document.createElement('button');
          dot.className = 'ai-testimonials-dot-{{ ai_gen_id }}';
          dot.setAttribute('data-slide', i);
          if (i === 0) dot.classList.add('active');
          this.dotsContainer.appendChild(dot);
        }
      }

      setupEventListeners() {
        if (this.prevBtn) {
          this.prevBtn.addEventListener('click', () => this.prevSlide());
        }

        if (this.nextBtn) {
          this.nextBtn.addEventListener('click', () => this.nextSlide());
        }

        if (this.dotsContainer) {
          this.dotsContainer.addEventListener('click', (e) => {
            if (e.target.hasAttribute('data-slide')) {
              this.goToSlide(parseInt(e.target.dataset.slide));
            }
          });
        }

        if (this.autoplayBtn) {
          this.autoplayBtn.addEventListener('click', () => this.toggleAutoplay());
        }

        this.addEventListener('mouseenter', () => this.pauseAutoplay());
        this.addEventListener('mouseleave', () => {
          if (this.isAutoplayActive) this.startAutoplay();
        });

        let startX = 0;
        let currentX = 0;
        let isDragging = false;

        this.addEventListener('touchstart', (e) => {
          startX = e.touches[0].clientX;
          isDragging = true;
          this.pauseAutoplay();
        });

        this.addEventListener('touchmove', (e) => {
          if (!isDragging) return;
          currentX = e.touches[0].clientX;
        });

        this.addEventListener('touchend', () => {
          if (!isDragging) return;
          isDragging = false;
          
          const diff = startX - currentX;
          if (Math.abs(diff) > 50) {
            if (diff > 0) {
              this.nextSlide();
            } else {
              this.prevSlide();
            }
          }

          if (this.isAutoplayActive) this.startAutoplay();
        });
      }

      updateSlider() {
        if (!this.track) return;
        
        const translateX = -this.currentSlide * (100 / this.totalSlides);
        this.track.style.transform = `translateX(${translateX}%)`;

        this.updateDots();
        this.updateNavButtons();
      }

      updateDots() {
        if (!this.dotsContainer) return;
        
        const dots = this.dotsContainer.querySelectorAll('.ai-testimonials-dot-{{ ai_gen_id }}');
        dots.forEach((dot, index) => {
          dot.classList.toggle('active', index === this.currentSlide);
        });
      }

      updateNavButtons() {
        if (this.prevBtn) {
          this.prevBtn.disabled = this.currentSlide === 0;
        }
        if (this.nextBtn) {
          this.nextBtn.disabled = this.currentSlide === this.totalSlides - 1;
        }
      }

      prevSlide() {
        if (this.currentSlide > 0) {
          this.currentSlide--;
          this.updateSlider();
        }
      }

      nextSlide() {
        if (this.currentSlide < this.totalSlides - 1) {
          this.currentSlide++;
        } else {
          this.currentSlide = 0;
        }
        this.updateSlider();
      }

      goToSlide(index) {
        this.currentSlide = index;
        this.updateSlider();
      }

      startAutoplay() {
        if (!this.isAutoplayActive || this.totalSlides <= 1) return;
        
        this.autoplayInterval = setInterval(() => {
          this.nextSlide();
        }, this.autoplaySpeed);
      }

      pauseAutoplay() {
        if (this.autoplayInterval) {
          clearInterval(this.autoplayInterval);
          this.autoplayInterval = null;
        }
      }

      toggleAutoplay() {
        this.isAutoplayActive = !this.isAutoplayActive;
        
        if (this.autoplayBtn) {
          const playText = this.autoplayBtn.querySelector('[data-play-text]');
          const pauseText = this.autoplayBtn.querySelector('[data-pause-text]');
          
          if (this.isAutoplayActive) {
            playText.style.display = 'inline';
            pauseText.style.display = 'none';
            this.startAutoplay();
          } else {
            playText.style.display = 'none';
            pauseText.style.display = 'inline';
            this.pauseAutoplay();
          }
        }
      }

      disconnectedCallback() {
        this.pauseAutoplay();
      }
    }

    customElements.define('testimonials-slider-{{ ai_gen_id }}', TestimonialsSlider{{ ai_gen_id }});
  })();
</script>

