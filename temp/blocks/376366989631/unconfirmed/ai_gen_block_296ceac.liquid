{% doc %}
  @prompt
    Create a testimonials section with customer photos and text testimonials. The section should display customer testimonials in a clean, modern layout with circular customer profile photos alongside their testimonial text and names. Include customizable options for adding multiple testimonials, adjusting layout spacing, and styling the text and images.

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-testimonials-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding_top }}px 0 {{ block.settings.section_padding_bottom }}px;
    background-color: {{ block.settings.background_color }};}

  .ai-testimonials-container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-testimonials-header-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: {{ block.settings.header_spacing }}px;
  }

  .ai-testimonials-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    color: {{ block.settings.title_color }};
    margin: 0 0 16px;
    font-weight: 600;
  }

  .ai-testimonials-subtitle-{{ ai_gen_id }} {
    font-size: {{ block.settings.subtitle_size }}px;
    color: {{ block.settings.subtitle_color }};
    margin: 0;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .ai-testimonials-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: {{ block.settings.testimonial_spacing }}px;
    margin-top: {{ block.settings.grid_spacing }}px;
  }

  .ai-testimonial-card-{{ ai_gen_id }} {
    background-color: {{ block.settings.card_background_color }};
    border-radius: {{ block.settings.card_border_radius }}px;
    padding: {{ block.settings.card_padding }}px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease, box-shadow 0.3s ease;text-align: {{ block.settings.text_alignment }};
  }

  .ai-testimonial-card-{{ ai_gen_id }}:hover {
    transform: translateY(-4px);
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.15);
  }

  .ai-testimonial-content-{{ ai_gen_id }} {
    margin-bottom: {{ block.settings.content_spacing }}px;
  }

  .ai-testimonial-text-{{ ai_gen_id }} {
    font-size: {{ block.settings.text_size }}px;
    color: {{ block.settings.text_color }};
    line-height: 1.6;
    margin: 0;
    font-style: italic;
  }

  .ai-testimonial-author-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: 16px;
    {% if block.settings.text_alignment == 'center' %}
      justify-content: center;
    {% elsif block.settings.text_alignment == 'right' %}
      justify-content: flex-end;
    {% endif %}
  }

  .ai-testimonial-photo-{{ ai_gen_id }} {
    width: {{ block.settings.photo_size }}px;
    height: {{ block.settings.photo_size }}px;
    border-radius: 50%;
    overflow: hidden;
    flex-shrink: 0;
    background-color: #f4f4f4;}

  .ai-testimonial-photo-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-testimonial-photo-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f4f4f4;
  }

  .ai-testimonial-photo-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-testimonial-info-{{ ai_gen_id }} {
    flex-grow: 1;
  }

  .ai-testimonial-name-{{ ai_gen_id }} {
    font-size: {{ block.settings.name_size }}px;
    color: {{ block.settings.name_color }};
    font-weight: 600;
    margin: 0 0 4px;
  }

  .ai-testimonial-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.job_title_size }}px;
    color: {{ block.settings.job_title_color }};
    margin: 0;opacity: 0.8;
  }

  .ai-testimonial-rating-{{ ai_gen_id }} {
    display: flex;
    gap: 2px;
    margin-bottom: {{ block.settings.rating_spacing }}px;{% if block.settings.text_alignment == 'center' %}
      justify-content: center;
    {% elsif block.settings.text_alignment == 'right' %}
      justify-content: flex-end;
    {% endif %}
  }

  .ai-testimonial-star-{{ ai_gen_id }} {
    width: {{ block.settings.star_size }}px;
    height: {{ block.settings.star_size }}px;
    color: {{ block.settings.star_color }};
  }

  @media screen and (max-width: 768px) {
    .ai-testimonials-grid-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: {{ block.settings.testimonial_spacing | times: 0.8 }}px;
    }

    .ai-testimonials-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size | times: 0.8 }}px;
    }

    .ai-testimonial-card-{{ ai_gen_id }} {
      padding: {{ block.settings.card_padding | times: 0.8 }}px;
    }

    .ai-testimonial-author-{{ ai_gen_id }} {
      flex-direction: column;
      text-align: center;gap: 12px;
    }

    .ai-testimonial-info-{{ ai_gen_id }} {
      text-align: center;
    }
  }
{% endstyle %}

<div class="ai-testimonials-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-testimonials-container-{{ ai_gen_id }}">
    {% if block.settings.title != blank or block.settings.subtitle != blank %}
      <div class="ai-testimonials-header-{{ ai_gen_id }}">
        {% if block.settings.title != blank %}
          <h2 class="ai-testimonials-title-{{ ai_gen_id }}">{{ block.settings.title }}</h2>
        {% endif %}
        {% if block.settings.subtitle != blank %}
          <div class="ai-testimonials-subtitle-{{ ai_gen_id }}">{{ block.settings.subtitle }}</div>
        {% endif %}
      </div>
    {% endif %}

    <div class="ai-testimonials-grid-{{ ai_gen_id }}">
      {% for i in (1..6) %}
        {% liquid
          assign testimonial_enabled_key = 'testimonial_' | append: i | append: '_enabled'
          assign testimonial_text_key = 'testimonial_' | append: i | append: '_text'
          assign testimonial_name_key = 'testimonial_' | append: i | append: '_name'
          assign testimonial_title_key = 'testimonial_' | append: i | append: '_title'
          assign testimonial_photo_key = 'testimonial_' | append: i | append: '_photo'
          assign testimonial_rating_key = 'testimonial_' | append: i | append: '_rating'

          assign testimonial_enabled = block.settings[testimonial_enabled_key]
          assign testimonial_text = block.settings[testimonial_text_key]
          assign testimonial_name = block.settings[testimonial_name_key]
          assign testimonial_title = block.settings[testimonial_title_key]
          assign testimonial_photo = block.settings[testimonial_photo_key]
          assign testimonial_rating = block.settings[testimonial_rating_key]
        %}

        {% if testimonial_enabled and testimonial_text != blank %}
          <div class="ai-testimonial-card-{{ ai_gen_id }}">
            {% if block.settings.show_rating and testimonial_rating > 0 %}
              <div class="ai-testimonial-rating-{{ ai_gen_id }}">
                {% for star in (1..5) %}<svg class="ai-testimonial-star-{{ ai_gen_id }}" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="{% if star <= testimonial_rating %}currentColor{% else %}none{% endif %}" stroke="currentColor" stroke-width="2">
                    <polygon points="12,2 15.09,8.26 22,9.27 17,14.14 18.18,21.02 12,17.77 5.82,21.02 7,14.14 2,9.27 8.91,8.26"></polygon>
                  </svg>
                {% endfor %}
              </div>
            {% endif %}

            <div class="ai-testimonial-content-{{ ai_gen_id }}">
              <p class="ai-testimonial-text-{{ ai_gen_id }}">"{{ testimonial_text }}"</p></div>

            <div class="ai-testimonial-author-{{ ai_gen_id }}">
              <div class="ai-testimonial-photo-{{ ai_gen_id }}">
                {% if testimonial_photo %}
                  <img
                    src="{{ testimonial_photo | image_url: width: 200}}"
                    alt="{{ testimonial_name | escape }}"
                    loading="lazy"
                    width="200"
                    height="200"
                  >
                {% else %}
                  <div class="ai-testimonial-photo-placeholder-{{ ai_gen_id }}">
                    {{ 'image' | placeholder_svg_tag }}
                  </div>
                {% endif %}
              </div>

              <div class="ai-testimonial-info-{{ ai_gen_id }}">
                {% if testimonial_name != blank %}
                  <div class="ai-testimonial-name-{{ ai_gen_id }}">{{ testimonial_name }}</div>
                {% endif %}
                {% if testimonial_title != blank %}
                  <div class="ai-testimonial-title-{{ ai_gen_id }}">{{ testimonial_title }}</div>
                {% endif %}
              </div>
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

