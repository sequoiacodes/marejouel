                <input
                  type="email"
                  name="contact[email]"
                  class="ai-footer-newsletter-input-{{ ai_gen_id }}"
                  value="{{ form.email }}"
                  placeholder="{{ block.settings.newsletter_placeholder }}"
                  aria-label="Email address"
                  {% if form.errors %}
                    aria-invalid="true"aria-describedby="ai-footer-newsletter-error-{{ ai_gen_id }}"
                  {% endif %}{% if form.posted_successfully? %}
                    aria-describedby="ai-footer-newsletter-success-{{ ai_gen_id }}"
                  {% endif %}required
                >
                <input type="hidden" name="contact[tags]" value="newsletter">
                <button type="submit" class="ai-footer-newsletter-button-{{ ai_gen_id }}">
                  {{ block.settings.newsletter_button_text }}
                </button>
              </div>
              {% if form.errors %}
                <div id="ai-footer-newsletter-error-{{ ai_gen_id }}" class="ai-footer-newsletter-error-{{ ai_gen_id }}">
                  {{ form.errors.messages.email }}
                </div>
              {% endif %}
              {% if form.posted_successfully? %}
                <div id="ai-footer-newsletter-success-{{ ai_gen_id }}" class="ai-footer-newsletter-success-{{ ai_gen_id }}">
                  {{ block.settings.newsletter_success_message }}
                </div>
              {% endif %}
            {% endform %}
          </div>
        </div>
      {% endif %}
    </div><div class="ai-footer-bottom-{{ ai_gen_id }}">
      <div class="ai-footer-bottom-content-{{ ai_gen_id }}"><div class="ai-footer-copyright-{{ ai_gen_id }}">
          {{ block.settings.copyright_text }}
        </div>
        {% if block.settings.show_payment_icons %}
          <div class="ai-footer-payment-icons-{{ ai_gen_id }}">
            <div class="ai-footer-payment-icon-{{ ai_gen_id }}">VISA</div>
            <div class="ai-footer-payment-icon-{{ ai_gen_id }}">MC</div>
            <div class="ai-footer-payment-icon-{{ ai_gen_id }}">AMEX</div>
            <div class="ai-footer-payment-icon-{{ ai_gen_id }}">PAYPAL</div>
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</footer>

