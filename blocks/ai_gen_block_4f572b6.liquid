{% doc %}
  @prompt
    Create a flexible image and text section with one side displaying an image and the other side containing customizable text content. The image should have maximum height options and full height controls. Include comprehensive settings for layout control (image left/right positioning), image sizing with height maximization options, styling controls, text formatting, spacing adjustments, background colors, and mobile responsiveness. The section should allow merchants to easily swap positions, customize colors, fonts, spacing, and set the image to take full available height to match their brand aesthetic.

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-image-text-section-{{ ai_gen_id }} {
    background-color: {{ block.settings.section_background_color }};
    padding: {{ block.settings.section_padding_top }}px 0 {{ block.settings.section_padding_bottom }}px;
  }

  .ai-image-text-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.container_width }}px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-image-text-wrapper-{{ ai_gen_id }} {
    display: flex;
    align-items: {{ block.settings.vertical_alignment }};
    gap: {{ block.settings.content_gap }}px;
    min-height: {{ block.settings.min_section_height }}px;
  }

  .ai-image-text-wrapper-{{ ai_gen_id }}.reverse {
    flex-direction: row-reverse;
  }

  .ai-image-text-image-column-{{ ai_gen_id }} {
    flex: 0 0 {{ block.settings.image_width }}%;
    display: flex;
  }

  .ai-image-text-content-column-{{ ai_gen_id }} {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: {{ block.settings.text_vertical_alignment }};
    padding: {{ block.settings.text_padding_top }}px {{ block.settings.text_padding_horizontal }}px {{ block.settings.text_padding_bottom }}px;
    background-color: {{ block.settings.text_background_color }};
    border-radius: {{ block.settings.text_border_radius }}px;
  }

  .ai-image-text-image-wrapper-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    border-radius: {{ block.settings.image_border_radius }}px;
    overflow: hidden;
    {% if block.settings.enable_full_height %}
      min-height: {{ block.settings.image_max_height }}px;
    {% endif %}
  }

  .ai-image-text-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: {{ block.settings.image_fit }};
    {% if block.settings.enable_full_height %}
      min-height: {{ block.settings.image_max_height }}px;
    {% else %}
      max-height: {{ block.settings.image_max_height }}px;
    {% endif %}
  }

  .ai-image-text-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    background-color: #f4f4f4;
    border-radius: {{ block.settings.image_border_radius }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    {% if block.settings.enable_full_height %}
      min-height: {{ block.settings.image_max_height }}px;
    {% else %}
      height: {{ block.settings.image_max_height }}px;
    {% endif %}
  }

  .ai-image-text-image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 200px;
    max-height: 200px;
    opacity: 0.3;
  }

  .ai-image-text-heading-{{ ai_gen_id }} {
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
    font-weight: {{ block.settings.heading_weight }};
    line-height: {{ block.settings.heading_line_height }};
    margin: 0 0 {{ block.settings.heading_margin_bottom }}px;
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-image-text-subheading-{{ ai_gen_id }} {
    color: {{ block.settings.subheading_color }};
    font-size: {{ block.settings.subheading_size }}px;
    font-weight: {{ block.settings.subheading_weight }};
    line-height: {{ block.settings.subheading_line_height }};
    margin: 0 0 {{ block.settings.subheading_margin_bottom }}px;
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-image-text-content-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.text_size }}px;
    line-height: {{ block.settings.text_line_height }};
    margin: 0 0 {{ block.settings.text_margin_bottom }}px;
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-image-text-button-{{ ai_gen_id }} {
    display: inline-block;
    padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
    background-color: {{ block.settings.button_background_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_font_size }}px;
    font-weight: {{ block.settings.button_font_weight }};
    border: {{ block.settings.button_border_width }}px solid {{ block.settings.button_border_color }};
    transition: all 0.3s ease;
    text-align: center;
    {% if block.settings.text_alignment == 'center' %}
      align-self: center;
    {% elsif block.settings.text_alignment == 'right' %}
      align-self: flex-end;
    {% else %}
      align-self: flex-start;
    {% endif %}
  }

  .ai-image-text-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_background_color }};
    color: {{ block.settings.button_hover_text_color }};
    border-color: {{ block.settings.button_hover_border_color }};
  }

  @media screen and (max-width: 768px) {
    .ai-image-text-wrapper-{{ ai_gen_id }},
    .ai-image-text-wrapper-{{ ai_gen_id }}.reverse {
      flex-direction: {{ block.settings.mobile_layout }};
      gap: {{ block.settings.mobile_content_gap }}px;
    }

    .ai-image-text-image-column-{{ ai_gen_id }} {
      flex: none;
      width: 100%;
    }

    .ai-image-text-content-column-{{ ai_gen_id }} {
      padding: {{ block.settings.mobile_text_padding }}px;
    }

    .ai-image-text-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.mobile_heading_size }}px;
    }

    .ai-image-text-subheading-{{ ai_gen_id }} {
      font-size: {{ block.settings.mobile_subheading_size }}px;
    }

    .ai-image-text-content-{{ ai_gen_id }} {
      font-size: {{ block.settings.mobile_text_size }}px;
    }

    .ai-image-text-image-wrapper-{{ ai_gen_id }} {
      {% if block.settings.enable_full_height %}
        min-height: {{ block.settings.mobile_image_height }}px;
      {% endif %}
    }

    .ai-image-text-image-{{ ai_gen_id }} {
      {% if block.settings.enable_full_height %}
        min-height: {{ block.settings.mobile_image_height }}px;
      {% else %}
        max-height: {{ block.settings.mobile_image_height }}px;
      {% endif %}
    }

    .ai-image-text-image-placeholder-{{ ai_gen_id }} {
      {% if block.settings.enable_full_height %}
        min-height: {{ block.settings.mobile_image_height }}px;
      {% else %}
        height: {{ block.settings.mobile_image_height }}px;
      {% endif %}
    }
  }
{% endstyle %}

<div class="ai-image-text-section-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-image-text-container-{{ ai_gen_id }}">
    <div class="ai-image-text-wrapper-{{ ai_gen_id }} {% if block.settings.image_position == 'right' %}reverse{% endif %}">
      <div class="ai-image-text-image-column-{{ ai_gen_id }}">
        <div class="ai-image-text-image-wrapper-{{ ai_gen_id }}">
          {% if block.settings.image %}
            <img
              src="{{ block.settings.image | image_url: width: 2000 }}"
              alt="{{ block.settings.image.alt | escape }}"
              class="ai-image-text-image-{{ ai_gen_id }}"
              loading="lazy"
              width="{{ block.settings.image.width }}"
              height="{{ block.settings.image.height }}"
            >
          {% else %}
            <div class="ai-image-text-image-placeholder-{{ ai_gen_id }}">
              {{ 'image' | placeholder_svg_tag }}
            </div>
          {% endif %}
        </div>
      </div>

      <div class="ai-image-text-content-column-{{ ai_gen_id }}">
        {% if block.settings.subheading != blank %}
          <div class="ai-image-text-subheading-{{ ai_gen_id }}">
            {{ block.settings.subheading }}
          </div>
        {% endif %}

        {% if block.settings.heading != blank %}
          <h2 class="ai-image-text-heading-{{ ai_gen_id }}">
            {{ block.settings.heading }}
          </h2>
        {% endif %}

        {% if block.settings.text_content != blank %}
          <div class="ai-image-text-content-{{ ai_gen_id }}">
            {{ block.settings.text_content }}
          </div>
        {% endif %}

        {% if block.settings.button_text != blank and block.settings.button_link != blank %}
          <a href="{{ block.settings.button_link }}" class="ai-image-text-button-{{ ai_gen_id }}">
            {{ block.settings.button_text }}
          </a>
        {% endif %}
      </div>
    </div>
  </div>
</div>

