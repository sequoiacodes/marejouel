{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .testimonials-section-{{ ai_gen_id }} {
    position: relative;
    padding: 60px 20px;
    background-image: url('{{ block.settings.background_image | image_url: width: 1920 }}');
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
  }

  .testimonials-overlay-{{ ai_gen_id }} {
    position: absolute;
    inset: 0;
    background-color: rgba(0,0,0, {{ block.settings.overlay_opacity | divided_by: 100.0 }});
    z-index: 1;
  }

  .testimonials-container-{{ ai_gen_id }} {
    position: relative;
    z-index: 2;
    max-width: 1200px;
    margin: auto;
    display: grid;
    grid-template-columns: 1fr 400px;
    gap: 40px;
    align-items: center;
  }

  /* Text Content */
  .testimonial-textbox-{{ ai_gen_id }} {
    background: rgba(255,255,255,0.1);
    backdrop-filter: blur(6px);
    padding: 30px;
    border-radius: 12px;
    color: white;
  }

  .testimonial-subtitle-{{ ai_gen_id }} {
    font-size: 14px;
    letter-spacing: 2px;
    text-transform: uppercase;
    margin-bottom: 10px;
    color: #ddd;
  }

  .testimonial-title-{{ ai_gen_id }} {
    font-size: 36px;
    font-weight: bold;
    margin-bottom: 20px;
  }

  .testimonial-stars-{{ ai_gen_id }} {
    display: flex;
    gap: 5px;
    margin-bottom: 15px;
  }

  .testimonial-stars-{{ ai_gen_id }} svg {
    width: 20px;
    height: 20px;
    fill: #FFD700;
  }

  .testimonial-text-{{ ai_gen_id }} {
    font-size: 18px;
    line-height: 1.6;
    font-style: italic;
    margin-bottom: 20px;
  }

  .testimonial-author-{{ ai_gen_id }} {
    font-weight: bold;
    margin-bottom: 10px;
  }

  /* Navigation */
  .testimonial-nav-{{ ai_gen_id }} {
    display: flex;
    gap: 10px;
  }

  .testimonial-nav-{{ ai_gen_id }} button {
    width: 40px;
    height: 40px;
    border: 2px solid white;
    background: transparent;
    color: white;
    border-radius: 50%;
    cursor: pointer;
    font-size: 18px;
    font-weight: bold;
    transition: 0.3s;
  }

  .testimonial-nav-{{ ai_gen_id }} button:hover {
    background: white;
    color: black;
  }

  /* Image */
  .testimonial-image-wrapper-{{ ai_gen_id }} {
    border-radius: 12px;
    overflow: hidden;
    height: 100%;
  }

  .testimonial-image-wrapper-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  /* Responsive */
  @media (max-width: 900px) {
    .testimonials-container-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
    }
    .testimonial-image-wrapper-{{ ai_gen_id }} {
      height: 300px;
      order: -1;
    }
  }
{% endstyle %}

<div class="testimonials-section-{{ ai_gen_id }}">
  <div class="testimonials-overlay-{{ ai_gen_id }}"></div>
  <div class="testimonials-container-{{ ai_gen_id }}">
    
    <!-- Left Text -->
    <div class="testimonial-textbox-{{ ai_gen_id }}">
      <p class="testimonial-subtitle-{{ ai_gen_id }}">{{ block.settings.subtitle }}</p>
      <h2 class="testimonial-title-{{ ai_gen_id }}">{{ block.settings.title }}</h2>
      
      <div class="testimonial-stars-{{ ai_gen_id }}">
        {% for i in (1..block.settings.testimonial_rating) %}
          <svg viewBox="0 0 24 24"><path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/></svg>
        {% endfor %}
      </div>

      <p class="testimonial-text-{{ ai_gen_id }}">{{ block.settings.testimonial_text }}</p>
      <p class="testimonial-author-{{ ai_gen_id }}">{{ block.settings.testimonial_author }}</p>

      <!-- Navigation -->
      <div class="testimonial-nav-{{ ai_gen_id }}">
        <button data-prev>&lt;</button>
        <button data-next>&gt;</button>
      </div>
    </div>

    <!-- Right Image -->
    <div class="testimonial-image-wrapper-{{ ai_gen_id }}">
      {% if block.settings.testimonial_image %}
        <img src="{{ block.settings.testimonial_image | image_url: width: 600 }}" alt="">
      {% endif %}
    </div>

  </div>
</div>

{% schema %}
{
  "name": "Custom Testimonials",
  "settings": [
    { "type": "image_picker", "id": "background_image", "label": "Background Image" },
    { "type": "range", "id": "overlay_opacity", "label": "Overlay Opacity (%)", "min": 0, "max": 80, "step": 5, "default": 0 },
    { "type": "text", "id": "subtitle", "label": "Subtitle", "default": "LET'S HEAR FROM OUR CLIENTS" },
    { "type": "text", "id": "title", "label": "Title", "default": "TESTIMONIALS" },
    { "type": "textarea", "id": "testimonial_text", "label": "Testimonial Text", "default": "Absolutely loved it! The fit, the quality and the color. This is the only one I will buy." },
    { "type": "text", "id": "testimonial_author", "label": "Author Name", "default": "Joey B." },
    { "type": "range", "id": "testimonial_rating", "label": "Star Rating", "min": 1, "max": 5, "step": 1, "default": 5 },
    { "type": "image_picker", "id": "testimonial_image", "label": "Testimonial Image" }
  ],
  "presets": [
    { "name": "Custom Testimonials" }
  ]
}
{% endschema %}
