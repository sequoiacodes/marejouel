{% doc %}
  @prompt
    Create a flexible layout section with a parent container containing two child divs arranged using flexbox with no gap between them. The first child div should display a photo/image with customizable height and width settings. The second child div should contain text elements (subheading, main heading, and content area with background image) with justify-content center alignment. Make the layout fully responsive, allow merchants to customize all text content and images, and ensure both divs are seamlessly joined without spacing. Include settings for image dimensions and text alignment options., where is the pading of parent div, make the child div are right and left image and text, add the justify in the text field

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-flex-layout-{{ ai_gen_id }} {
    display: flex;
    width: 100%;
    min-height: {{ block.settings.container_min_height }}px;
    padding: {{ block.settings.container_padding_vertical }}px {{ block.settings.container_padding_horizontal }}px;
    {% if block.settings.layout_direction == 'image_right' %}
      flex-direction: row-reverse;
    {% endif %}
  }

  .ai-flex-layout__image-container-{{ ai_gen_id }} {
    flex: 0 0 {{ block.settings.image_width }}%;
    height: {{ block.settings.image_height }}px;
    overflow: hidden;
  }

  .ai-flex-layout__image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .ai-flex-layout__image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-flex-layout__image-placeholder-{{ ai_gen_id }} svg {
    width:100%;
    height: 100%;
    max-width: 200px;
    max-height: 200px;
    opacity: 0.5;
  }

  .ai-flex-layout__content-container-{{ ai_gen_id }} {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: {{ block.settings.text_alignment }};
    padding: {{ block.settings.content_padding_vertical }}px {{ block.settings.content_padding_horizontal }}px;text-align: {{ block.settings.text_alignment }};
    position: relative;
    background-color: {{ block.settings.content_background_color }};
  }

  {% if block.settings.content_background_image %}
    .ai-flex-layout__content-container-{{ ai_gen_id }}::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background-image: url('{{ block.settings.content_background_image | image_url: width: 1200}}');
      background-size: cover;
      background-position: center;
      background-repeat: no-repeat;
      opacity: {{ block.settings.background_image_opacity | divided_by: 100.0 }};z-index: 1;
    }
  {% endif %}

  .ai-flex-layout__content-wrapper-{{ ai_gen_id }} {
    position: relative;
    z-index: 2;
    max-width: {{ block.settings.content_max_width }}px;
  }

  .ai-flex-layout__subheading-{{ ai_gen_id }} {
    color: {{ block.settings.subheading_color }};
    font-size: {{ block.settings.subheading_size }}px;
    margin:0 0 {{ block.settings.subheading_margin_bottom }}px0;
    font-weight: {{ block.settings.subheading_weight }};
    text-transform: {{ block.settings.subheading_transform }};
    text-align: {{ block.settings.subheading_text_align }};
  }

  .ai-flex-layout__heading-{{ ai_gen_id }} {
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
    margin: 0 0 {{ block.settings.heading_margin_bottom }}px 0;
    font-weight: {{ block.settings.heading_weight }};
    line-height: 1.2;
    text-align: {{ block.settings.heading_text_align }};
  }

  .ai-flex-layout__content-{{ ai_gen_id }} {
    color: {{ block.settings.content_color }};
    font-size: {{ block.settings.content_size }}px;
    line-height: 1.6;
    margin: 0;
    text-align: {{ block.settings.content_text_align }};
  }

  .ai-flex-layout__content-{{ ai_gen_id }} p {
    margin: 0 0 1em 0;
  }

  .ai-flex-layout__content-{{ ai_gen_id }} p:last-child {
    margin-bottom: 0;
  }

  @media screen and (max-width: 768px) {
    .ai-flex-layout-{{ ai_gen_id }} {
      flex-direction: {{ block.settings.mobile_layout }};
      padding: {{ block.settings.mobile_container_padding }}px;
    }

    .ai-flex-layout__image-container-{{ ai_gen_id }} {
      flex: none;
      width:100%;
      height: {{ block.settings.mobile_image_height }}px;
    }

    .ai-flex-layout__content-container-{{ ai_gen_id }} {
      padding: {{ block.settings.mobile_content_padding }}px;
    }

    .ai-flex-layout__subheading-{{ ai_gen_id }} {
      font-size: {{ block.settings.mobile_subheading_size }}px;
    }

    .ai-flex-layout__heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.mobile_heading_size }}px;
    }

    .ai-flex-layout__content-{{ ai_gen_id }} {
      font-size: {{ block.settings.mobile_content_size }}px;
    }
  }
{% endstyle %}<div class="ai-flex-layout-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-flex-layout__image-container-{{ ai_gen_id }}">
    {% if block.settings.image %}
      <img
        src="{{ block.settings.image | image_url: width:1200 }}"
        alt="{{ block.settings.image.alt | escape }}"
        class="ai-flex-layout__image-{{ ai_gen_id }}"
        loading="lazy"
        width="{{ block.settings.image.width }}"
        height="{{ block.settings.image.height }}"
      >
    {% else %}
      <div class="ai-flex-layout__image-placeholder-{{ ai_gen_id }}">
        {{ 'image' | placeholder_svg_tag }}
      </div>
    {% endif %}
  </div>

  <div class="ai-flex-layout__content-container-{{ ai_gen_id }}">
    <div class="ai-flex-layout__content-wrapper-{{ ai_gen_id }}">
      {% if block.settings.subheading != blank %}
        <div class="ai-flex-layout__subheading-{{ ai_gen_id }}">
          {{ block.settings.subheading }}
        </div>
      {% endif %}

      {% if block.settings.heading != blank %}
        <h2 class="ai-flex-layout__heading-{{ ai_gen_id }}">
          {{ block.settings.heading }}
        </h2>
      {% endif %}

      {% if block.settings.content != blank %}
        <div class="ai-flex-layout__content-{{ ai_gen_id }}">
          {{ block.settings.content }}
        </div>
         <div class="d-flex justify-content-center align-items-center p-4">
          <a href="#" class="btn {{ section.settings.style_btn }}"> Donate </a>
         
        </div>
      {% endif %}
    </div>
  </div>
</div>

