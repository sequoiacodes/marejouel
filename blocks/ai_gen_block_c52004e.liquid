{% doc %}
  @prompt
    Create a flexible image and text section with one side displaying an image and the other side containing customizable text content. Include comprehensive settings for layout control (image left/right positioning), image sizing and styling options, text formatting controls, spacing adjustments, background colors, and mobile responsiveness. The section should allow merchants to easily swap the image and text positions, customize colors, fonts, and spacing to match their brand aesthetic.

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-image-text-section-{{ ai_gen_id }} {
    background-color: {{ block.settings.section_background_color }};
    padding: {{ block.settings.section_padding_top }}px 0 {{ block.settings.section_padding_bottom }}px;
  }

  .ai-image-text-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.container_width }}px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-image-text-wrapper-{{ ai_gen_id }} {
    display: flex;
    align-items: {{ block.settings.vertical_alignment }};
    gap: {{ block.settings.content_gap }}px;
  }

  .ai-image-text-wrapper-{{ ai_gen_id }}--reverse {
    flex-direction: row-reverse;
  }

  .ai-image-text-image-col-{{ ai_gen_id }} {
    flex: 0 0 {{ block.settings.image_width }}%;
  }

  .ai-image-text-content-col-{{ ai_gen_id }} {
    flex: 1;
    padding: {{ block.settings.text_padding_vertical }}px {{ block.settings.text_padding_horizontal }}px;
    background-color: {{ block.settings.text_background_color }};
    border-radius: {{ block.settings.text_border_radius }}px;
  }

  .ai-image-text-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    border-radius: {{ block.settings.image_border_radius }}px;
    overflow: hidden;
  }

  .ai-image-text-image-{{ ai_gen_id }} {
    width: 100%;
    height: auto;
    display: block;
    object-fit: {{ block.settings.image_fit }};
  }

  .ai-image-text-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: {{ block.settings.image_height }}px;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: {{ block.settings.image_border_radius }}px;
  }

  .ai-image-text-image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 200px;
    max-height: 200px;
    opacity: 0.3;
  }

  .ai-image-text-heading-{{ ai_gen_id }} {
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
    font-weight: {{ block.settings.heading_weight }};
    text-transform: {{ block.settings.heading_transform }};
    line-height: {{ block.settings.heading_line_height }};
    margin: 0 0 {{ block.settings.heading_margin_bottom }}px;
  }

  .ai-image-text-subheading-{{ ai_gen_id }} {
    color: {{ block.settings.subheading_color }};
    font-size: {{ block.settings.subheading_size }}px;
    font-weight: {{ block.settings.subheading_weight }};
    text-transform: {{ block.settings.subheading_transform }};
    line-height: {{ block.settings.subheading_line_height }};
    margin: 0 0 {{ block.settings.subheading_margin_bottom }}px;
  }

  .ai-image-text-text-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.text_size }}px;
    line-height: {{ block.settings.text_line_height }};
    margin: 0 0 {{ block.settings.text_margin_bottom }}px;
  }

  .ai-image-text-button-{{ ai_gen_id }} {
    display: inline-block;
    padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
    background-color: {{ block.settings.button_background_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_text_size }}px;
    font-weight: {{ block.settings.button_text_weight }};
    text-transform: {{ block.settings.button_text_transform }};
    transition: all 0.3s ease;
    border: {{ block.settings.button_border_width }}px solid {{ block.settings.button_border_color }};
  }

  .ai-image-text-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_background_color }};
    color: {{ block.settings.button_hover_text_color }};
    border-color: {{ block.settings.button_hover_border_color }};
  }

  @media screen and (max-width: 768px) {
    .ai-image-text-wrapper-{{ ai_gen_id }},
    .ai-image-text-wrapper-{{ ai_gen_id }}--reverse {
      flex-direction: {{ block.settings.mobile_layout }};
      gap: {{ block.settings.mobile_content_gap }}px;
    }

    .ai-image-text-image-col-{{ ai_gen_id }} {
      flex: none;
      width: 100%;
    }

    .ai-image-text-content-col-{{ ai_gen_id }} {
      padding: {{ block.settings.mobile_text_padding_vertical }}px {{ block.settings.mobile_text_padding_horizontal }}px;
    }

    .ai-image-text-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.mobile_heading_size }}px;
    }

    .ai-image-text-subheading-{{ ai_gen_id }} {
      font-size: {{ block.settings.mobile_subheading_size }}px;
    }

    .ai-image-text-text-{{ ai_gen_id }} {
      font-size: {{ block.settings.mobile_text_size }}px;
    }

    .ai-image-text-section-{{ ai_gen_id }} {
      padding: {{ block.settings.mobile_section_padding_top }}px 0 {{ block.settings.mobile_section_padding_bottom }}px;
    }

    .ai-image-text-container-{{ ai_gen_id }} {
      padding: 0 15px;
    }
  }
{% endstyle %}

<div class="ai-image-text-section-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-image-text-container-{{ ai_gen_id }}">
    <div class="ai-image-text-wrapper-{{ ai_gen_id }}{% if block.settings.image_position == 'right' %} ai-image-text-wrapper-{{ ai_gen_id }}--reverse{% endif %}">
      <div class="ai-image-text-image-col-{{ ai_gen_id }}">
        <div class="ai-image-text-image-wrapper-{{ ai_gen_id }}">
          {% if block.settings.image %}
            <img
              src="{{ block.settings.image | image_url: width: 1200 }}"
              alt="{{ block.settings.image.alt | escape }}"
              class="ai-image-text-image-{{ ai_gen_id }}"
              loading="lazy"
              width="{{ block.settings.image.width }}"
              height="{{ block.settings.image.height }}"
            >
          {% else %}
            <div class="ai-image-text-image-placeholder-{{ ai_gen_id }}">
              {{ 'image' | placeholder_svg_tag }}
            </div>
          {% endif %}
        </div>
      </div>
      
      <div class="ai-image-text-content-col-{{ ai_gen_id }}">
        {% if block.settings.subheading != blank %}
          <div class="ai-image-text-subheading-{{ ai_gen_id }}">
            {{ block.settings.subheading }}
          </div>
        {% endif %}
        
        {% if block.settings.heading != blank %}
          <h2 class="ai-image-text-heading-{{ ai_gen_id }}">
            {{ block.settings.heading }}
          </h2>
        {% endif %}
        
        {% if block.settings.text != blank %}
          <div class="ai-image-text-text-{{ ai_gen_id }}">
            {{ block.settings.text }}
          </div>
        {% endif %}
        
        {% if block.settings.button_text != blank and block.settings.button_link != blank %}
          <a href="{{ block.settings.button_link }}" class="ai-image-text-button-{{ ai_gen_id }}">
            {{ block.settings.button_text }}
          </a>
        {% endif %}
      </div>
    </div>
  </div>
</div>

