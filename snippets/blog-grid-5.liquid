<!-- blog-grid-5.liquid -->
<div class="blog__item blog__item--5">
  {%- if article.image -%}
  <div class="content-block__image position-relative">
    <a href="{{ article.url }}">
      <noscript>
        {{ article | image_url: width: 1024, height: 1024 | image_tag: article.title | escape }}
      </noscript>
      <div class="article__photo-container">
        <div class="article__photo-wrapper">
          {%- assign img_url = article.image | image_url: width: 1 | replace: 'width=1', 'width={width}' -%}
          <img class="lazyload"
               src="{{ article.image | image_url: width: 1, height: 1 }}"
               data-src="{{ img_url }}"
               data-widths="[360, 540, 720, 900, 1080, 1296, 1512, 1728, 2048]"
               data-aspectratio="{{ article.image.aspect_ratio }}"
               data-sizes="auto"
               alt="{{ article.title | escape }}"
               loading="lazy"
               width="{{ article.image.width }}"
               height="{{ article.image.height }}">
               <div class="blog__tags position-absolute w-100  d-flex flex-column align-items-start ">
                 <div>
                  {%- if article.tags.size > 0 and enable_tag -%}
                    {%- for tag in article.tags -%}
                    <a class="mb-1 mr-1 d-inline-block text-uppercase small txt-body-60" href="{{ blog.url }}/tagged/{{ tag | handle }}" class="link-body-color">{{ tag }}</a>{% unless forloop.last %}{% endunless %}
                    {%- endfor -%}
                  {%- endif -%}
                  <h4 class=" mt-2 mb-4 blog__title-link "><a href="{{ article.url }}">{{ article.title }}</a></h4>
                    <p class="blog__meta">
                      {%- if enable_date -%}
                        <span class=" pr-2 mr-2 border-right">{{ article.published_at | time_tag: '%m-%d-%Y' }}</span>
                      {%- endif -%}
                      {%- if enable_comment -%}
                        <span>{{ 'blogs.comments.with_count' | t: count: article.comments_count }}</span>
                      {%- endif -%}
                    </p>
                 
                  {%- if enable_short -%}
                    <div class="rte rte--indented-images mb-4 d-none d-lg-block">
                      {%- if article.excerpt.size > 0 -%}
                        {{ article.excerpt }}
                      {%- else -%}
                        <p>{{ article.content | strip_html | truncatewords: 20 }}</p>
                      {%- endif -%}
                    </div>
                  {%- endif -%}
                </div>
                {%- if enable_btn_blog -%}
                  <a class="btn {% if enable_btn_line %} btn-underline {% else %} btn-theme btn-sm {% endif %} mt-auto mb-1" href="{{ article.url }}">{{ 'blogs.article.read_more' | t }}</a>
                {%- endif -%}
              </div>
        </div>
      </div>
    </a>
    
  </div>
  {%- endif -%}

  
</div>