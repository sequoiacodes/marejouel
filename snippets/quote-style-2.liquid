<div class=" d-flex {% if aligntext == 'text-center' %} justify-content-center {% endif %} quote__slide quote__style_2 {{ aligntext }} ">
    <div class="quote-wrap" style="background-color:{{ bg_item }}">
        <div class="media mb-3 ">
            {%- if avatar != blank -%}
                <div class="author-avatar mr-4 mt-0">
                  <img class="lazyload" src="{{ avatar | image_url: width: 1 , height: 1 }}" data-src="{{ avatar | image_url: width: 300 }}" 
                    loading="lazy"
                    width="{{ avatar.width }}"
                    height="{{ avatar.height }}"/>
                </div>
            {%- endif -%}
            <div class="media-body text-left">
                {%- if author -%}
                    <div class="h6 mb-0">{{ author }} </div>
                {%- endif -%}
                {%- if info != blank -%}<span class="txt-body-60 capitalize small ">  {{ info }}</span>{%- endif -%}
                {%- if rate > 0 -%}
                    <ul class="rating mt-n1">
                      {%- for i in (1..5) -%}
                        {%- assign iMax = rate -%}
                        {%- if i <= iMax -%}
                        <li class="rated">
                          <svg aria-hidden="true" focusable="false" width="24" height="24" viewBox="0 0 24 24" fill="currentColor"><path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"></path></svg>
                            {%- else -%}
                        <li>
                          <svg aria-hidden="true" focusable="false" width="24" height="24" viewBox="0 0 24 24" fill="currentColor"><path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"></path></svg>
                          {%- endif -%}
                      {%- endfor -%}
                    </ul>
                  {%- endif -%}
            </div>
        </div>
        {%- if title != blank -%}
            <h4 class="mt-2">
                {{ title }}
            </h4>
        {%- endif -%}
        <div class=" py-2 {{ size_text }}">{{ quote }}</div>
    </div>
  </div>